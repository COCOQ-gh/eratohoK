;-------------------------------------------------
;能力レベルARG:0に対する必要経験値(×100)を返す関数(SLG系)
;-------------------------------------------------
@ABLUP_NEED_EXP_SLG_THREE(ARG:0)
#FUNCTION
SELECTCASE ARG:0
	CASE IS >= 120
		RETURNF 7000 + (ARG:0 - 120) * 600
	CASE IS >= ランク閾値_三能力_S
		RETURNF 4000 + (ARG:0 - 100) * 150
	CASE IS >= ランク閾値_三能力_A
		RETURNF 2000 + (ARG:0 - 80) * 100
	CASE IS >= ランク閾値_三能力_C
		RETURNF 600 + (ARG:0 - 60) * 70 
	CASE IS >= ランク閾値_三能力_F
		RETURNF 300 + (ARG:0 - 30) * 10
	CASEELSE
		RETURNF 300
ENDSELECT


@ABLUP_NEED_EXP_SLG_TWO(ARG:0)
#FUNCTION
SELECTCASE ARG:0
	CASE IS >= 100
		RETURNF 5900 + (ARG:0 - 100) * 600
	CASE IS >= ランク閾値_料理歌唱_S
		RETURNF 2500 + (ARG:0 - 80) * 170
	CASE IS >= ランク閾値_料理歌唱_A
		RETURNF 1300 + (ARG:0 - 70) * 120
	CASE IS >= ランク閾値_料理歌唱_B
		RETURNF 600 + (ARG:0 - 60) * 70
	CASE IS >= ランク閾値_料理歌唱_C
		RETURNF 400 + (ARG:0 - 50) * 20
	CASE IS >= ランク閾値_料理歌唱_E
		RETURNF 400
	CASEELSE
		RETURNF 300
ENDSELECT
