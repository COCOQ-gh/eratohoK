;経験値のみによる能力上昇(SLG能力)

;-------------------------------------------------
;武闘
;-------------------------------------------------
@ABLUP_EXPNAME50
RESULTS = 武闘経験値

@CALC_ABLUP_EXP50(ARG:0)
;最大値は300
IF ABL:(ARG:0):武闘 >= 300
	RETURN -1
ENDIF

LOCAL:0 = ABLUP_NEED_EXP_SLG_THREE(ABL:(ARG:0):武闘) / GROWTYPE_RATE(ARG:0, "武闘")

IF GETBIT(TALENT:(ARG:0):ＳＬＧ素質, 素質_ＳＬＧ_超成長力)
	TIMES LOCAL:0, 0.80
ENDIF
IF TALENT:(ARG:0):サボり魔
	SELECTCASE ABL:(ARG:0):武闘
		CASE IS >= 90
			TIMES LOCAL:0, 1.50
		CASE IS >= 80
			TIMES LOCAL:0, 1.25
	ENDSELECT
ENDIF
RETURN MAX(LOCAL:0, 1)

