;能力上昇 Ｍ感

;-------------------------------------------------
;能力上昇に必要な経験を設定
;-------------------------------------------------
@ABLUP_EXPNAME4
RESULTS = Ｍ感経験値

;-------------------------------------------------
;能力上昇に必要な経験量を返す関数
;-------------------------------------------------
@CALC_ABLUP_EXP4(ARG:0)
SELECTCASE ABL:(ARG:0):Ｍ感
	CASE 0
		LOCAL:0 = 15
	CASE 1
		LOCAL:0 = 50
	CASE 2
		LOCAL:0 = 100
	CASE 3
		LOCAL:0 = 250
	CASE 4
		LOCAL:0 = 600
	CASEELSE
		LOCAL:0 = 1200 + 600 * (ABL:(ARG:0):Ｍ感 - 5)
ENDSELECT

IF ARG:0 == MASTER
	TIMES LOCAL:0, 2.00
ENDIF

;素質による補正
IF TALENT:(ARG:0):Ｍ鈍感
	TIMES LOCAL:0, 1.20
ENDIF
IF TALENT:(ARG:0):Ｍ敏感
	TIMES LOCAL:0, 0.80
ENDIF
IF TALENT:(ARG:0):淫乱
	TIMES LOCAL:0, 0.80
ENDIF
IF TALENT:(ARG:0):蕩唇
	TIMES LOCAL:0, 0.80
ENDIF

RETURN MAX(LOCAL:0, 1)
