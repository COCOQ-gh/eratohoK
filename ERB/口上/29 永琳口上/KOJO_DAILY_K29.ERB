;----------------------------------
@KOJO_DAILY_K29_KANMI
#DIM 永琳

永琳 = NAME_TO_CHARA("永琳")


;ラブラブじゃないとダメよ
SIF TALENT:永琳:恋慕 == 0 && TALENT:永琳:親愛 == 0 && TALENT:永琳:恋人 == 0
	RETURN -1

;永琳が同一勢力所属で捕虜でなく死んでいないなら3.5%で発生
SIF !CHECK_KOJO_DAILY_HAPPEN(永琳, 35, 1, 0, 1)
	RETURN -1


CALL KOJO_DAILY_START
IF KDVAR:永琳:永琳_甘味 != 0

SELECTCASE RAND:3
	CASE 0
		PRINTFORMW %ANAME(MASTER)%は%ANAME(永琳)%を誘って、再び甘味処を訪れた
		PRINTFORMW 「うーん、今日は何にしようかしらね。やっぱり和風、も悪くはないけれど、この間は……」
		PRINTFORMW こうして見ると医者先生でも月の頭脳でも保護者でもなく、ただの女の子でしかない
		PRINTFORMW %ANAME(MASTER)%は%ANAME(永琳)%と甘味を楽しんだ……
	CASE 1
		PRINTFORMW %ANAME(MASTER)%が%ANAME(永琳)%の元を訪れると、%ANAME(永琳)%はソファで寝ていた
		PRINTFORMW 相当忙しかったのだろう。お湯は沸きっぱなしだし、数冊の本がバラバラと床に散っている
		PRINTFORMW せっかく来たのだから、と%ANAME(MASTER)%は部屋の片づけを始めた
		PRINTFORMW 「ん……あ、%ANAME(MASTER)%。片づけ？　しなくてもいいわよ。後で私がやるから」
		PRINTFORMW 疲れているのは明らかだから、自分がやると%ANAME(MASTER)%が言い張ると、%ANAME(永琳)%は再び瞼を閉じた
		PRINTFORMW 「そう……ありがとう。助かるわ」
		PRINTFORMW %ANAME(永琳)%に毛布をかけ、%ANAME(MASTER)%は片づけを続けた……
	CASE 2
		PRINTFORMW 「あら%ANAME(MASTER)%、どうしたの？」
		PRINTFORMW %ANAME(永琳)%の元を訪れた%ANAME(MASTER)%は、握り飯をいくつか持ってきたと伝えた
		PRINTFORMW 「気が利くわね。ありがとう。後でいただくわ」
		PRINTFORMW %ANAME(MASTER)%は忙しなく手を動かす%ANAME(永琳)%の邪魔にならないよう、そっと立ち去った……
ENDSELECT

ELSE
	PRINTFORML 最近、%ANAME(永琳)%がため息をついているところをよく見る
	PRINTFORMW 多分疲れているのだろう。そう考えた%ANAME(MASTER)%は、%ANAME(永琳)%を甘味処へ誘った
	PRINTFORMW 「甘味処……？　嫌よ。いい歳の大人が行くような場所じゃないもの」
	PRINTFORMW %ANAME(MASTER)%がどうしてもと頼み込むと、%ANAME(永琳)%は渋々承知した
	PRINTFORMW ・
	PRINTFORMW ・
	PRINTFORMW ・
	PRINTFORMW さて、何を注文しようか
	PRINTL
	CALL ASK_MULTI("みたらし団子", "チョコポテトチップス", "ネオアームストロングサイクロンジェットアームストロングパフェ")
	SELECTCASE RESULT
		CASE 0
			PRINTFORMW 「じゃあ、私は洋風のお菓子にしましょう」
		CASE 1
			PRINTFORMW 「それなら、私は定番の甘味でも頂こうかしら」
		CASE 2
			PRINTFORMW 「これは……すごい完成度ね」
	ENDSELECT
	PRINTFORMW %ANAME(MASTER)%は%ANAME(永琳)%と半分ずつ分け合わないかと提案した
	PRINTFORMW 「いい考えね。実は%ANAME(MASTER)%のそれ、ちょっと気になっていたの」
	PRINTFORMW 楽しげな%ANAME(永琳)%に、%ANAME(MASTER)%はまた誘ってもいいか尋ねた
	PRINTFORMW 「ん、まあ……たまにはいいかもね」
	PRINTFORMW ならまた来よう。そう約束し、%ANAME(MASTER)%と%ANAME(永琳)%は甘味を楽しんだ……
	KDVAR:永琳:永琳_甘味 = 1
ENDIF

CFLAG:永琳:好感度 += 50


