@KOJO_DAILY_K73_SYUGYOUSOU
#DIM 一輪
#DIM 雲山
#DIM アップ能力

一輪 = NAME_TO_CHARA("一輪")
雲山 = NAME_TO_CHARA("雲山")

;一輪がいないと駄目
SIF 一輪 == -1
	RETURN -1

;雲山といっしょ
SIF !(CFLAG:雲山:所属 == CFLAG:MASTER:所属 && !CFLAG:雲山:捕虜先 && CFLAG:雲山:特殊状態フラグ != 2)
	RETURN -1

;一輪と雲山が同一勢力所属で面識があり捕虜でなく死んでいないなら1%で発生
SIF !(RAND:1000 < 10 && CFLAG:一輪:所属 == CFLAG:MASTER:所属 && !CFLAG:一輪:捕虜先 && CFLAG:一輪:特殊状態フラグ != 2)
	RETURN -1

CALL KOJO_DAILY_START
PRINTFORMW %ANAME(MASTER)%がぼんやり天井のシミを数えていると、何やら遠くの方から威勢のいい声が聞こえてきた……
PRINTFORM 耳を澄ませてよく聞いてみると、一輪と雲山が
SELECTCASE RAND:100
	CASE IS < 40
		PRINTFORMW 手合わせをしているようだ……
		アップ能力 = GETNUM(ABL, "武闘")
	CASE IS < 60
		PRINTFORMW 新しい戦法を討議していた……
		アップ能力 = GETNUM(ABL, "知略")
	CASE IS < 80
		PRINTFORMW 政治談議に花を咲かせていた……
		アップ能力 = GETNUM(ABL, "政治")
	CASE IS < 90
		PRINTFORMW 目玉焼きには何をかけるかで争っていた……
		アップ能力 = GETNUM(ABL, "料理")
	CASEELSE
		PRINTFORMW 一緒に何かの唄を歌っていた……
		アップ能力 = GETNUM(ABL, "歌唱")
ENDSELECT
CALL COLORPRINTFORM(@"一輪と雲山のコンビネーションが高まり、%ABLNAME:アップ能力%が1上昇した！", COLOR("注意"), "W")
ABL:一輪:アップ能力 += 1