@KOJO_DAILY_K77_EXODIA
#DIM 白蓮
#DIM 星
#DIM 一輪
#DIM 水蜜
#DIM ぬえ
#DIM 響子

白蓮 = NAME_TO_CHARA("白蓮")
星 = NAME_TO_CHARA("星")
一輪 = NAME_TO_CHARA("一輪")
水蜜 = NAME_TO_CHARA("水蜜")
ぬえ = NAME_TO_CHARA("ぬえ")
響子 = NAME_TO_CHARA("響子")


;エクゾディアってなんだよ
SIF KDVAR:白蓮:白蓮_エクゾディア == 1
	RETURN -1

;白蓮が同一勢力所属で捕虜でなく死んでいないなら3.5%で発生
SIF !CHECK_KOJO_DAILY_HAPPEN(白蓮, 35, 1, 0, -1)
	RETURN -1

;エクゾディアパーツが揃ったら強くなる
SIF !(CFLAG:星:所属 == CFLAG:MASTER:所属 && CFLAG:一輪:所属 == CFLAG:MASTER:所属 && CFLAG:水蜜:所属 == CFLAG:MASTER:所属 && CFLAG:ぬえ:所属 == CFLAG:MASTER:所属 && CFLAG:響子:所属 == CFLAG:MASTER:所属)
	RETURN -1

CALL KOJO_DAILY_START
PRINTFORML 「力なき正義は無力、誰の言葉でしたか、覚えてはいませんが」
PRINTFORMW 「守りたいものを守るためならば、修羅になる必要もありましょう」

CALL COLORPRINTFORM(@"慈愛の心により、%ANAME(白蓮)%の武闘が5上昇した！", COLOR("注意"), "W")
ABL:白蓮:武闘 += 5
;慈愛の心とかスパロボの精神コマンドみたい

KDVAR:白蓮:白蓮_エクゾディア = 1