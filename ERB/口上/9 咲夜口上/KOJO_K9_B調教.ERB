@KOJO_TRAIN_START_B_K9
#DIM 咲夜
咲夜 = NAME_TO_CHARA("咲夜")

SIF CFLAG:咲夜:400 == 1
	RETURN 0

RESETCOLOR
DRAWLINE
SETCOLOR 咲夜_口上カラー

IF TALENT:咲夜:虚ろ
	PRINTFORML 「あ……うー……」
	PRINTFORMDL %ANAME(咲夜)%は乱れた服装で人形のように手足を投げ出している…
	GOTO END
ENDIF

;─────────────────────────────────────── 
;初回
;─────────────────────────────────────── 
IF CFLAG:202 == 0

	CFLAG:咲夜:202 = 1

	IF CFLAG:咲夜:400 == 0
		PRINTFORMDL 口上の使用の設定する
		PRINTFORMDL 
		PRINTDL [0] 口上を使用しない
		PRINTDL [1] 咲夜口上
		$INPUT_LOOP
		INPUT
		IF RESULT == 0
			PRINTFORMDW 口上を使用しない
			CFLAG:咲夜:400 = 1
			GOTO END
		ELSEIF RESULT == 1
			PRINTFORMDW 咲夜口上を使用する
			CFLAG:咲夜:400 = 2
			RESETCOLOR
			DRAWLINE
			SETCOLOR 咲夜_口上カラー
		ELSE
			GOTO INPUT_LOOP
		ENDIF
	ENDIF

	;初対面の場合
	IF !CFLAG:17
		IF CHECK_K9("敬語")
			PRINTFORML 「%CALLMASTER(咲夜)%……何かの悪い冗談だと思いたいのですが。本気でこういったご趣味が？」
		ELSE
			PRINTFORML 「これはいったい何のつもりなのかしら？」
			PRINTFORML 「あなたなんて見覚えもないのだけど。誰でもいいくらい飢えているの？」
			PRINTFORML 「時間がいくら無限でも、私はそれほど暇ではないわ。掃除でもしていたほうがマシね」
			PRINTFORML 「他を当たってくれるかしら」
		ENDIF
	;既に会ったことがある場合
	ELSE
		IF KDVAR:咲夜:咲夜_主の主は
			PRINTFORML 「%CALLMASTER(咲夜)%……どうぞ%ANAME(咲夜)%をよろしくお躾けください」
		ELSEIF KDVAR:咲夜:咲夜_主の客は
			PRINTFORML 「%CALLMASTER(咲夜)%……待ってはいたのだけれど、これはどういうことかしら」
			PRINTFORML 「力で従わせる必要なんて、ないのではなくて？」
		ELSEIF IS_SLAVE(咲夜)
			PRINTFORML 「%CALLMASTER(咲夜)%……よろしくお願いします」
			PRINTFORML %ANAME(咲夜)%は深く頭を垂れた
		ELSEIF CHECK_K9("敬語") && IS_LOVER(咲夜)
			PRINTFORML 「こういったご趣味にまでお付き合いしなくてはなりませんか？」
			PRINTFORML 「%CALLMASTER(咲夜)%に抱かれるのは嫌ではありませんが……」
			PRINTFORML 「遊びが本気になって軽く見られると、関係が壊れてしまうことだけが私の不安材料ですね」
		ELSEIF CHECK_K9("敬語")
			PRINTFORML 「こういったご趣味にまでお付き合いしなくてはなりませんか？」
			PRINTFORML 「遊びが本気になって軽く見られることは心配です」
		ELSEIF IS_LOVER(咲夜)
			PRINTFORML 「……何のつもりかしらね？　別にこんなことしなくても、%CALLMASTER(咲夜)%に抱かれるのは嫌ではないわ」
			PRINTFORML 「それとも、それじゃ満足できないような趣味でもあるのかしら」
			PRINTFORML 「困った人を選んでしまったようね、私……」
		ELSEIF TALENT:咲夜:合意
			PRINTFORML 「……何のつもりかしらね？　別にこんなことしなくても、%CALLMASTER(咲夜)%に抱かれるのは嫌ではないわ」
			PRINTFORML 「それとも、それじゃ満足できないような趣味でもあるのかしら」
			PRINTFORML 「悪いけどそこまでは付き合いきれないわよ？」
		ELSE
			PRINTFORML 「何のつもりかしらね？　%CALLMASTER(咲夜)%、変態なの？」
			PRINTFORML 「悪いけど他を当たってくれないかしら。はぁ……」
		ENDIF
	ENDIF

;─────────────────────────────────────── 
;開始時(1回のみ)
;─────────────────────────────────────── 
ELSEIF CFLAG:202 < 3 && IS_SLAVE(咲夜)
	CFLAG:202 = 3
	PRINTFORML 「%CALLMASTER(咲夜)%……どうぞ……%ANAME(咲夜)%をよろしくお躾けください……」

ELSEIF CFLAG:202 < 3 && IS_LOVER(咲夜)
	CFLAG:202 = 3
	IF CHECK_K9("敬語")
		PRINTFORML 「%CALLMASTER(咲夜)%……これは恋人になさることでしょうか？」
	ELSE
		PRINTFORML 「%CALLMASTER(咲夜)%……恋人になったと思ったのは気のせいだったかしら？」
	ENDIF

ELSEIF CFLAG:202 < 2 && CFLAG:咲夜:依存度 >= 300
	CFLAG:202 = 2
	IF CHECK_K9("敬語")
		PRINTFORML 「…………」
	ELSE
		PRINTFORML 「……慣れてきている自分が嫌だわ……」
	ENDIF

;─────────────────────────────────────── 
;開始時(2回目以降)
;─────────────────────────────────────── 
ELSEIF IS_SLAVE(咲夜)
	PRINTFORML 「よろしくお願いします……」

ELSEIF IS_LOVER(咲夜)
	IF CHECK_K9("敬語")
		PRINTFORML 「%CALLMASTER(咲夜)%がなさりたいなら……かまいません、けれど……」
	ELSE
		PRINTFORML 「もう……何なのかしらね」
	ENDIF 

ELSEIF CFLAG:咲夜:依存度 >= 300
	IF CHECK_K9("敬語")
		PRINTFORML 「……抵抗するのも疲れてきました」
	ELSE
		PRINTFORML 「……抵抗するのも……疲れるものね……」
	ENDIF

ELSE
	IF CHECK_K9("敬語")
		PRINTFORML 「……またですか。はぁ……」
	ELSE
		PRINTFORML 「……またなのね。はぁ……」
	ENDIF
ENDIF

;─────────────────────────────────────── 
;終了
;─────────────────────────────────────── 
$END
WAIT
RESETCOLOR
RETURN 0

;─────────────────────────────────────── 
