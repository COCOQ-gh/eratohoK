@KOJO_DAILY_K41_TUKAREKARAKA
#DIM 椛

椛 = NAME_TO_CHARA("椛")

;椛が同一勢力所属で捕虜でなく死んでいないなら3.5%で発生
SIF !CHECK_KOJO_DAILY_HAPPEN(椛, 35, 1, 0, 1)
	RETURN -1

;えっ！？　まだペニス持ってないの！？
SIF !PENIS(MASTER)
	RETURN -1

;一緒に出歩くくらいの仲じゃないとね
SIF CFLAG:椛:好感度 < 1500
	RETURN -1

CALL KOJO_DAILY_START
PRINTFORML %ANAME(MASTER)%は%ANAME(椛)%と2人で市中の警邏をしていた
IF KDVAR:椛:椛_疲れからか == 0
	PRINTFORML 仕事ではなく、%ANAME(椛)%が個人的に見回りたいと言っていたので、%ANAME(MASTER)%はそれに付き合っているのである
	PRINTFORMW 山賊、匪賊、盗賊、蛮族、野盗……めんどくさい連中はいくらでも湧いて出てくる以上、%ANAME(椛)%の言い分はまっとうであった
	PRINTFORMW 「ふう……%ANAME(MASTER)%さん、疲れていませんか？」
	PRINTFORMW 「いえ、私は馴れておりますので。全然問題あいまつぇんが」
	PRINTFORMW 噛み噛みだった
	PRINTFORMW ……将として働きながら、私的に巡回しているのだ。疲労を溜めない方が不自然だろう
	PRINTFORML 自分は疲れたから休みたい、どこかで休ませてくれないか
	PRINTFORMW %ANAME(MASTER)%がそう提案すると、%ANAME(椛)%は尻尾をフルフル振って賛同した
	PRINTFORMW 「そうですか！　仕方ありませんね。どこかお店にでも入りましょうか」
ELSE
	PRINTFORMW 「ふう……%ANAME(MASTER)%さん、疲れていませんか？」
	PRINTFORML %ANAME(MASTER)%が疲れたから休みたい、どこかで休ませてくれないかと提案すると
	PRINTFORMW %ANAME(椛)%は尻尾をフルフル振って賛同した
	PRINTFORMW 「仕方ありませんね。またどこか行きましょうか」
ENDIF
PRINTL

CALL ASK_MULTI("酒でもやるか", "サボりたいのか？", "出会い茶屋へ……")
SELECTCASE RESULT
	CASE 0
			PRINTFORML 「昼間から赤提灯ですか……まあ、そういうのが好きな人は好きでしょうね」
			PRINTFORMW 「あ！　あのお店空いてますよ！　%ANAME(MASTER)%好みなんじゃないですか？」
			PRINTFORMW あくまで付き合いで飲むというテイを保とうとする%ANAME(椛)%を引き連れ、%ANAME(MASTER)%は暖簾をくぐった……
			CFLAG:椛:好感度 += 50
			SIF KDVAR:椛:椛_疲れからか != 2
				KDVAR:椛:椛_疲れからか = 1
	CASE 1
			PRINTFORML 「なっ、なにを馬鹿なことを、そんなだらしないことを言うわけでは……」
			PRINTFORMW %ANAME(MASTER)%は尻尾を丸めてしまった%ANAME(椛)%と哨戒を続けた……
			SIF KDVAR:椛:椛_疲れからか != 2
				KDVAR:椛:椛_疲れからか = 1
	CASE 2
			PRINTFORML %ANAME(MASTER)%はパッと見ではそれと分からない出会茶屋に足を運んだ
			IF KDVAR:椛:椛_疲れからか != 2
				PRINTFORMW 「茶屋ですか。……ホントに茶屋ですか？　なんだか妙な気がするんですが」
				PRINTFORML 疲れからか、%ANAME(椛)%は妙な気配程度にしか気づいていないようだった
				PRINTFORMW 大変好都合である
				PRINTL 
				PRINTFORML 階段を昇り、奥の間へ入ると、一組の布団に枕が二つ並べてあった
				PRINTFORML 「な、ななななな……騙しましたね！？」
				PRINTFORMW だって休みたいって言うから
				PRINTFORMW 「そういう意味ではありません！！！！」
				PRINTFORMW 尻尾をピンと立てて怒る%ANAME(椛)%に、%ANAME(MASTER)%は平謝りした
				PRINTFORMW 「もういいですよ……その、嫌というわけでも、ありませんから」
				PRINTFORML %ANAME(MASTER)%は、赤くなった顔を伏せる%ANAME(椛)%の手を取り、優しく引き寄せた
				TALENT:椛:合意 = 1
				KDVAR:椛:椛_疲れからか = 2
			ELSE
				PRINTFORML 「またこの茶屋ですか。いえ、嫌というわけではありませんが」
				PRINTFORMW 「むしろ気兼ねなく過ごせていいかな……なんて」
			ENDIF
			PRINTFORML %ANAME(MASTER)%が%ANAME(椛)%の衣服に手をかけると、%ANAME(椛)%は目を閉じて体をゆだねてきた……

			EXP:椛:Ｃ感経験値 += ABL:椛:Ｃ感 * 5 + 5 + RAND:11
			EXP:椛:Ｖ感経験値 += ABL:椛:Ｖ感 * 20 + 15 + RAND:11
			EXP:椛:Ｂ感経験値 += ABL:椛:Ｂ感 * 4 + 4 + RAND:9
			EXP:椛:欲望経験値 += ABL:椛:欲望 * 3 + 2 + RAND:7
			EXP:椛:奉仕経験値 += ABL:椛:奉仕 * 2 + 5 + RAND:11
			EXP:椛:性交経験値 += ABL:椛:性交 * 5 + 15 + RAND:11
			EXP:椛:性技経験値 += ABL:椛:性技 + 2 + RAND:4
			EXP:椛:精愛経験値 += ABL:椛:精愛 * 10 + 30 + RAND:21
			;中出しと妊娠判定
			IF CONFIG:1 == 0 && (VAGINA(椛) || TALENT:椛:孕み可能)
				FOR LOCAL:1, 440, 480
					TCVAR:椛:(LOCAL:1) = 0
				NEXT
				CALL RECORD_INJECTION(椛, GET_ID(MASTER), 3)
				CALL CHECK_PREGNANT(椛)
			ENDIF
			;能力上昇はメッセージ表示後
			CALL TRAIN_AUTO_ABLUP(椛)
			;処女とキス未経験を失う
			IF RAND:4
				;ペニスへのキス
				CALL KISS_COMMON(椛, @"%ANAME(MASTER)%のペニス")
			ELSE
			;唇へのキス
				CALL KISS_COMMON(椛, @"%ANAME(MASTER)%の唇")
				CALL KISS_COMMON(MASTER, @"%ANAME(椛)%の唇")
			ENDIF
			CALL VIRGIN_COMMON(椛, "%ANAME(MASTER)%")
		CALL DOUTEI_COMMON(MASTER, @"%ANAME(椛)%の膣")
ENDSELECT