;─────────────────────────────────────── 
;●口上前文を表示する
;─────────────────────────────────────── 
@KOJO_COM_BEFORE_K9
#DIM 咲夜
咲夜 = NAME_TO_CHARA("咲夜")

;咲夜口上非表示
IF CFLAG:咲夜:400 == 1
	RETURN 0
ENDIF

VARSET 咲夜_入力台詞, "", 0, 10

;─────────────────────────────────────── 
;●カテゴリごとのテキスト入力
;─────────────────────────────────────── 
IF TALENT:咲夜:虚ろ || TALENT:咲夜:崩壊
	CALL KOJO_K9_HOLLOW

;現在　KOJO_SYSTEM.ERBで、TCVAR:52 || TCVAR:53（快楽失神or酒酔睡眠や離脱状態）なら口上が抑制されるため、体力不足以外は死に分岐
ELSEIF TCVAR:咲夜:51 || TCVAR:咲夜:52 || TCVAR:咲夜:53 == 1
	CALL KOJO_K9_SYNCOPE

;キス等の喋れないコマンド（単発継続）
ELSEIF GROUPMATCH(SELECTCOM, 20, 340, 341, 342) || IS_EQUIP(咲夜, 20, 340, 341, 342)
	CALL KOJO_K9_CANNOT_TALK

;ターゲットなら喋れないコマンド 86口枷 90イラマチオ 101顔面騎乗 102Ａ顔面騎乗 105Ｗ顔面騎乗 132口内放尿 210触手口辱
ELSEIF ( IS_MTAR(咲夜) && GROUPMATCH(SELECTCOM, 86, 90, 101, 102, 105) ) || IS_EQUIP_TARGET(咲夜, 86, 90, 101, 102, 105)
	CALL KOJO_K9_CANNOT_TALK

ELSEIF ( IS_MTAR(咲夜) && GROUPMATCH(SELECTCOM, 132, 210) ) || IS_EQUIP_TARGET(咲夜, 132, 210)
	CALL KOJO_K9_CANNOT_TALK

;プレイヤーなら喋れないコマンド 2クンニ 8アナル舐め 9乳首吸い 11フェラ 104足舐め 330日常フェラ
ELSEIF ( IS_MPLY(咲夜) && GROUPMATCH(SELECTCOM, 2, 8, 9, 11, 20, 104, 107, 330) ) || IS_EQUIP_PLAYER(咲夜, 2, 8, 9, 11, 20, 104, 107, 330)
	CALL KOJO_K9_CANNOT_TALK

;閨コマンド
ELSEIF SELECTCOM >= 0 && SELECTCOM <= 299
	;実行対象どっちも主人公でない口上・未実装
	IF !IS_MPLY(MASTER) && !IS_MTAR(MASTER)
	;	CALL KOJO_K9_NIGHT_BEFORE_ASSI

	;実行対象どちらかが主人公の口上
	ELSE
		CALL KOJO_K9_NIGHT_BEFORE
	ENDIF

;日常コマンド（なりゆきまかせ未満）
ELSEIF SELECTCOM >= 300 && SELECTCOM < 393
	CALL KOJO_K9_NOON_BEFORE

;それ以外のコマンド
ELSE
	GOTO END

ENDIF

;表示する
CALL KOJO_COM_DISPLAY_K9

;─────────────────────────────────────── 
;●終了
;─────────────────────────────────────── 
$END
RESETCOLOR
RETURN 0

