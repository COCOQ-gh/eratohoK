;─────────────────────────────────────── 
;●口上実行後を表示する（絶頂したら表示するのみ）
;─────────────────────────────────────── 
@KOJO_COM_AFTER_K9
#DIM 咲夜
咲夜 = NAME_TO_CHARA("咲夜")

;咲夜口上非表示
IF CFLAG:咲夜:400 == 1
	RETURN 0
ENDIF

VARSET 咲夜_入力台詞, "", 0, 10

;─────────────────────────────────────── 
;●カテゴリごとのテキスト入力
;─────────────────────────────────────── 
;酒酔い・気力切れ・体力切れ
IF TCVAR:咲夜:51 || TCVAR:咲夜:52 || TCVAR:咲夜:53 == 1
	GOTO END

;虚ろ崩壊
ELSEIF TALENT:咲夜:虚ろ || TALENT:咲夜:崩壊
	GOTO END

;ターゲットなら喋れないコマンド 86口枷 87腕 88Ａ腕 90イラマチオ 94首締め 97腹パン
ELSEIF ( IS_MTAR(咲夜) && GROUPMATCH(SELECTCOM, 86, 87, 88, 90, 94, 97) ) || IS_EQUIP_TARGET(咲夜, 86, 87, 88, 90, 94, 97)
	GOTO END

;ターゲットなら喋れないコマンド 101顔面騎乗 102Ａ顔面騎乗 105Ｗ顔面騎乗 132口内放尿 210触手口辱
ELSEIF ( IS_MTAR(咲夜) && GROUPMATCH(SELECTCOM, 101, 102, 105, 132, 210) ) || IS_EQUIP_TARGET(咲夜, 101, 102, 105, 132, 210)
	GOTO END

;口はあいていても継続中行動が激し過ぎて責め語を喋れないコマンド 87腕 88Ａ腕 94首締め 97腹パン
ELSEIF IS_MPLY(咲夜) && IS_EQUIP_TARGET(咲夜, 87, 88, 90, 94, 97)
	GOTO END

;閨コマンド
ELSEIF SELECTCOM >= 0 && SELECTCOM <= 299
	IF IS_MPLY(咲夜)
		CALL KOJO_K9_NIGHT_AFTER_PLAYER
	ELSEIF IS_MTAR(咲夜)
		CALL KOJO_K9_NIGHT_AFTER_TARGET
	ENDIF

;日常コマンド
ELSEIF SELECTCOM >= 300 && SELECTCOM < 390
	IF IS_MPLY(咲夜)
		CALL KOJO_K9_NOON_AFTER_PLAYER
	ELSEIF IS_MTAR(咲夜)
		CALL KOJO_K9_NOON_AFTER_TARGET
	ENDIF

;それ以外
ELSE
	GOTO END

ENDIF

;表示する
CALL KOJO_COM_DISPLAY_K9

;─────────────────────────────────────── 
;●終了
;─────────────────────────────────────── 
$END
RESETCOLOR
RETURN 0

