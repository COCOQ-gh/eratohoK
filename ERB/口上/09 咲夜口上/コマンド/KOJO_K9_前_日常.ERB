@KOJO_K9_NOON_BEFORE
#DIM 咲夜
#DIMS 咲夜機嫌
咲夜 = NAME_TO_CHARA("咲夜")

SIF CFLAG:咲夜:400 == 1
	RETURN 0

SETCOLOR 咲夜_口上カラー

;─────────────────────────────────────── 
;●機嫌が悪ければ通常のコマンド口上は喋らない
;─────────────────────────────────────── 
咲夜機嫌 = %TOSTR_EMOTION(咲夜)%
SELECTCASE 咲夜機嫌
	CASE "恨", "怒", "憤"
		SELECTCASE RAND:3
			CASE 1
				咲夜_入力台詞:0 = はぁ……
			CASE 2
				咲夜_入力台詞:0 = もう！　まったく
			CASEELSE
				咲夜_入力台詞:0 = イライラするわ
		ENDSELECT

	CASE "鬱", "悲", "憂"
		SELECTCASE RAND:3
			CASE 1
				咲夜_入力台詞:0 = はぁ……
			CASE 2
				咲夜_入力台詞:0 = 滅入るわね
			CASEELSE
				咲夜_入力台詞:0 = 憂鬱だわ
		ENDSELECT

	CASE  "狂", "恐", "怯"
		SELECTCASE RAND:3
			CASE 1
				咲夜_入力台詞:0 = 何なのかしら
			CASE 2
				咲夜_入力台詞:0 = 正直、怖いのだけれど
			CASEELSE
				咲夜_入力台詞:0 = わけがわからないわね
		ENDSELECT
	CASEELSE

ENDSELECT
IF 咲夜_入力台詞:0 != "" 
	GOTO END
ENDIF

;─────────────────────────────────────── 
;●コマンド口上を呼び出す
;─────────────────────────────────────── 
IF IS_MPLY(咲夜)
	CALL KOJO_K9_NOON_BEFORE_PLAYER
ELSE
	CALL KOJO_K9_NOON_BEFORE_TARGET
ENDIF

;─────────────────────────────────────── 
;●無言チェック
;─────────────────────────────────────── 
FOR LOCAL:0, 0, 6
	IF 咲夜_入力台詞:(LOCAL:0) != ""
		咲夜_表示台詞 = %咲夜_表示台詞%%咲夜_入力台詞:(LOCAL:0)%
	ENDIF
NEXT

;無言なら無言か曖昧にうなずく
IF 咲夜_表示台詞 == ""
	SELECTCASE RAND:9
		CASE 1
			咲夜_入力台詞:0 = そうね
		CASE 2
			咲夜_入力台詞:0 = ええ
		CASE 3
			咲夜_入力台詞:0 = …………
		CASEELSE
			咲夜_入力台詞:0 = わからないでもないわ
	ENDSELECT
ENDIF

$END
RETURN 0

