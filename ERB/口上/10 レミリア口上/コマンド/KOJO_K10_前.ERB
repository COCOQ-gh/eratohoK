;─────────────────────────────────────── 
;●口上前文を表示する
;─────────────────────────────────────── 
@KOJO_COM_BEFORE_K10
#DIM レミリア
レミリア = NAME_TO_CHARA("レミリア")

;レミリア口上非表示
IF CFLAG:レミリア:400 == 1
	RETURN 0
ENDIF

VARSET レミリア_入力台詞, "", 0, 10

;─────────────────────────────────────── 
;●カテゴリごとのテキスト入力
;─────────────────────────────────────── 
IF TALENT:レミリア:虚ろ || TALENT:レミリア:崩壊
	CALL KOJO_K10_HOLLOW

;現在　KOJO_SYSTEM.ERBで、TCVAR:52 || TCVAR:53（快楽失神or酒酔睡眠や離脱状態）なら口上が抑制されるため、体力不足以外は死に分岐
ELSEIF TCVAR:レミリア:51 || TCVAR:レミリア:52 || TCVAR:レミリア:53 == 1
	CALL KOJO_K10_SYNCOPE

;キス等の喋れないコマンド（単発継続）
ELSEIF GROUPMATCH(SELECTCOM, 20, 340, 341, 342) || IS_EQUIP(レミリア, 20, 340, 341, 342)
	CALL KOJO_K10_CANNOT_TALK

;ターゲットなら喋れないコマンド 86口枷 90イラマチオ 101顔面騎乗 102Ａ顔面騎乗 105Ｗ顔面騎乗 132口内放尿 210触手口辱
ELSEIF ( IS_MTAR(レミリア) && GROUPMATCH(SELECTCOM, 86, 90, 101, 102, 105) ) || IS_EQUIP_TARGET(レミリア, 86, 90, 101, 102, 105)
	CALL KOJO_K10_CANNOT_TALK

ELSEIF ( IS_MTAR(レミリア) && GROUPMATCH(SELECTCOM, 132, 210) ) || IS_EQUIP_TARGET(レミリア, 132, 210)
	CALL KOJO_K10_CANNOT_TALK

;プレイヤーなら喋れないコマンド 2クンニ 8アナル舐め 9乳首吸い 11フェラ 104足舐め 330日常フェラ
ELSEIF ( IS_MPLY(レミリア) && GROUPMATCH(SELECTCOM, 2, 8, 9, 11, 20, 104, 107, 330) ) || IS_EQUIP_PLAYER(レミリア, 2, 8, 9, 11, 20, 104, 107, 330)
	CALL KOJO_K10_CANNOT_TALK

;閨コマンド
ELSEIF SELECTCOM >= 0 && SELECTCOM <= 299
	;実行対象どっちも主人公でない口上・未実装
	IF !IS_MPLY(MASTER) && !IS_MTAR(MASTER)
	;	CALL KOJO_K10_NIGHT_BEFORE_ASSI

	;実行対象どちらかが主人公の口上
	ELSE
		CALL KOJO_K10_NIGHT_BEFORE
	ENDIF

;日常コマンド（なりゆきまかせ未満）
ELSEIF SELECTCOM >= 300 && SELECTCOM < 393
	CALL KOJO_K10_NOON_BEFORE

;それ以外のコマンド
ELSE
	GOTO END

ENDIF

;表示する
CALL KOJO_COM_DISPLAY_K10

;─────────────────────────────────────── 
;●終了
;─────────────────────────────────────── 
$END
RESETCOLOR
RETURN 0

