@KOJO_K10_NOON_BEFORE_PLAYER
#DIM レミリア
レミリア = NAME_TO_CHARA("レミリア")

;─────────────────────────────────────── 
;●同一コマンド
;─────────────────────────────────────── 
IF SELECTCOM == PREVCOM
	IF !IS_INITIATIVE(レミリア)
		SELECTCASE RAND:4
			CASE 1
				レミリア_入力台詞:0 = %KOJO_COM_NAME_TARGET_K10(SELECTCOM)%たいのね
			CASE 2
				レミリア_入力台詞:0 = いいわよ。私もまだ%KOJO_COM_NAME_PLAYER_K10(SELECTCOM)%たいわ
			CASEELSE
				レミリア_入力台詞:0 = もっと%KOJO_COM_NAME_TARGET_K10(SELECTCOM)%たい？　言ってみなさい
		ENDSELECT
	ELSE
		IF IS_SLAVE(レミリア)
			レミリア_入力台詞:0 = %CALLMASTER_K10(レミリア)%以外には絶対に主導権を握らせないわ
		ELSE
			レミリア_入力台詞:0 = 絶対に主導権は握らせないわ
		ENDIF
	ENDIF
ENDIF

;─────────────────────────────────────── 
;●スキンシップ・背中を流される
;─────────────────────────────────────── 
IF GROUPMATCH(SELECTCOM, 320, 358)
	SELECTCASE RAND:5
		CASE 1
			レミリア_入力台詞:1 = くすぐったい？　このくらい我慢なさい
		CASE 2
			レミリア_入力台詞:1 = もっと傍に来て
		CASE 3
			レミリア_入力台詞:1 = こんな感じかしらね
		CASE 4
			レミリア_入力台詞:1 = もっとくっついてなさい
		CASEELSE
			レミリア_入力台詞:1 = 遠いわ
	ENDSELECT

;─────────────────────────────────────── 
;●321頭を撫でる・322髪を梳く・323櫛で梳かす
;─────────────────────────────────────── 
ELSEIF GROUPMATCH(SELECTCOM, 321, 322, 323)
	;スキンヘッド
	IF TALENT:MASTER:髪の長さ < 25
		IF SELECTCOM == 322 || SELECTCOM == 323
			IF !IS_INITIATIVE(レミリア)
				レミリア_入力台詞:1 = 磨いて欲しいの？　%CALLMASTER_K10(レミリア)%、剃ってるじゃない
			ELSE
				レミリア_入力台詞:1 = 髪をとかしてあげ……られなかったわ。つまんないわね。まぁ、撫でてあげる
			ENDIF
		ENDIF
		レミリア_入力台詞:2 = はい、なでなで
	;他
	ELSE
		SELECTCASE RAND:5
			CASE 1
				レミリア_入力台詞:1 = 人形が欲しいけど、動かないのは嫌なの。つまらないでしょ
			CASE 2
				レミリア_入力台詞:1 = %HAIR_NAME_K10(MASTER)%ね
			CASE 3
				レミリア_入力台詞:1 = 三つ編みにしてみてもいい？　後で解いてもいいから
			CASE 4
				レミリア_入力台詞:1 = 髪に触りたいわ
			CASEELSE
				レミリア_入力台詞:1 = 切ったりもしてみたいわ
		ENDSELECT
	ENDIF

;─────────────────────────────────────── 
;●見つめる・甘い言葉
;─────────────────────────────────────── 
ELSEIF GROUPMATCH(SELECTCOM, 324, 325)
	SELECTCASE RAND:4
		CASE 1
			レミリア_入力台詞:1 = 可愛がってるわよ
		CASE 2
			レミリア_入力台詞:1 = …………
		CASE 3
			レミリア_入力台詞:1 = %CALLMASTER_K10(レミリア)%のことは気に入ってるわ
		CASEELSE
			レミリア_入力台詞:1 = %CALLMASTER_K10(レミリア)%はいちばんお気に入りよ
	ENDSELECT

;─────────────────────────────────────── 
;●訓練系
;─────────────────────────────────────── 
ELSEIF GROUPMATCH(SELECTCOM, 301, 302, 303, 304, 305, 306)
	SELECTCASE SELECTCOM
		CASE 301
			レミリア_入力台詞:1 = 鬼ごっこしましょ。私が鬼ね。吸血『鬼』なんだから
		CASE 302
			レミリア_入力台詞:1 = 大図書館に行きましょ。たまには本が読みたいわ
		CASE 303
			レミリア_入力台詞:1 = 仕事ごっこをするの。大図書館に行きましょ
		CASE 304
			レミリア_入力台詞:1 = ちょっと、出掛けるよ。幻想郷巡りするの
		CASE 305
			レミリア_入力台詞:1 = 退屈だわ。歌ってよ。私も歌うから
		CASE 306
			レミリア_入力台詞:1 = 退屈だわ。料理をしてみましょう。何か面白いものを作って
	ENDSELECT

;─────────────────────────────────────── 
;●お腹の音
;─────────────────────────────────────── 
ELSEIF SELECTCOM == 326
	レミリア_入力台詞:1 = ここに人間がいるの？　レタスじゃなくて

;─────────────────────────────────────── 
;●その他
;─────────────────────────────────────── 
ELSE
	SELECTCASE RAND:7
		CASE 1
			レミリア_入力台詞:1 = 私が主役。覚えておきなさい
		CASE 2
			レミリア_入力台詞:1 = 簡単にやられてくれないかしら
		CASE 3
			レミリア_入力台詞:1 = %CALLMASTER_K10(レミリア)%、これやってみて
		CASE 4
			レミリア_入力台詞:1 = 私をなめるとどういう目にあうか教えておかなくちゃ
		CASE 5
			レミリア_入力台詞:1 = こうしちゃえばいいのよ
		CASE 6
			レミリア_入力台詞:1 = さぁ、大人しくするのよ
		CASEELSE
			レミリア_入力台詞:1 = よく判ってるわね。それで、いいのよ
	ENDSELECT
ENDIF

$END
RETURN 0

