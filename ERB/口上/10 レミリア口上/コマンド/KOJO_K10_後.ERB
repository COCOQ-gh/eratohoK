;─────────────────────────────────────── 
;●口上実行後を表示する（絶頂したら表示するのみ）
;─────────────────────────────────────── 
@KOJO_COM_AFTER_K10
#DIM レミリア
レミリア = NAME_TO_CHARA("レミリア")

;レミリア口上非表示
IF CFLAG:レミリア:400 == 1
	RETURN 0
ENDIF

VARSET レミリア_入力台詞, "", 0, 10

;─────────────────────────────────────── 
;●カテゴリごとのテキスト入力
;─────────────────────────────────────── 
;酒酔い・気力切れ・体力切れ
IF TCVAR:レミリア:51 || TCVAR:レミリア:52 || TCVAR:レミリア:53 == 1
	GOTO END

;虚ろ崩壊
ELSEIF TALENT:レミリア:虚ろ || TALENT:レミリア:崩壊
	GOTO END

;ターゲットなら喋れないコマンド 86口枷 87腕 88Ａ腕 90イラマチオ 94首締め 97腹パン
ELSEIF ( IS_MTAR(レミリア) && GROUPMATCH(SELECTCOM, 86, 87, 88, 90, 94, 97) ) || IS_EQUIP_TARGET(レミリア, 86, 87, 88, 90, 94, 97)
	GOTO END

;ターゲットなら喋れないコマンド 101顔面騎乗 102Ａ顔面騎乗 105Ｗ顔面騎乗 132口内放尿 210触手口辱
ELSEIF ( IS_MTAR(レミリア) && GROUPMATCH(SELECTCOM, 101, 102, 105, 132, 210) ) || IS_EQUIP_TARGET(レミリア, 101, 102, 105, 132, 210)
	GOTO END

;口はあいていても継続中行動が激し過ぎて責め語を喋れないコマンド 87腕 88Ａ腕 94首締め 97腹パン
ELSEIF IS_MPLY(レミリア) && IS_EQUIP_TARGET(レミリア, 87, 88, 90, 94, 97)
	GOTO END

;閨コマンド
ELSEIF SELECTCOM >= 0 && SELECTCOM <= 299
	IF IS_MPLY(レミリア)
		CALL KOJO_K10_NIGHT_AFTER_PLAYER
	ELSEIF IS_MTAR(レミリア)
		CALL KOJO_K10_NIGHT_AFTER_TARGET
	ENDIF

;日常コマンド
ELSEIF SELECTCOM >= 300 && SELECTCOM < 390
	IF IS_MPLY(レミリア)
		CALL KOJO_K10_NOON_AFTER_PLAYER
	ELSEIF IS_MTAR(レミリア)
		CALL KOJO_K10_NOON_AFTER_TARGET
	ENDIF

;それ以外
ELSE
	GOTO END

ENDIF

;表示する
CALL KOJO_COM_DISPLAY_K10

;─────────────────────────────────────── 
;●終了
;─────────────────────────────────────── 
$END
RESETCOLOR
RETURN 0

