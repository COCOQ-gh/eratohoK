;─────────────────────────────────────── 
;●コマンド実行前日常300～
;─────────────────────────────────────── 
@KOJO_K10_NOON_BEFORE
#DIM レミリア
#DIMS レミリア機嫌
レミリア = NAME_TO_CHARA("レミリア")

SIF CFLAG:レミリア:400 == 1
	RETURN 0

SETCOLOR レミリア_口上カラー

;─────────────────────────────────────── 
;●機嫌が悪ければ通常のコマンド口上は喋らない
;─────────────────────────────────────── 
レミリア機嫌 = %TOSTR_EMOTION(レミリア)%
SELECTCASE レミリア機嫌
	CASE "恨", "怒", "憤"
		SELECTCASE RAND:5
			CASE 1
				レミリア_入力台詞:0 = あいつは何やってるの
			CASE 2
				レミリア_入力台詞:0 = もう！　しっかりしてよね
			CASE 3
				レミリア_入力台詞:0 = 短絡ね
			CASE 4
				レミリア_入力台詞:0 = 理由が分からない
			CASEELSE
				レミリア_入力台詞:0 = ふん
		ENDSELECT

	CASE "鬱", "悲", "憂"
		SELECTCASE RAND:3
			CASE 1
				レミリア_入力台詞:0 = 退屈なの
			CASE 2
				レミリア_入力台詞:0 = 太陽は嫌いよ
			CASEELSE
				レミリア_入力台詞:0 = 眠いわ
		ENDSELECT

	CASE  "狂", "恐", "怯"
		SELECTCASE RAND:3
			CASE 1
				レミリア_入力台詞:0 = おかしなことにしたでしょ
			CASE 2
				レミリア_入力台詞:0 = な、訳ない
			CASEELSE
				レミリア_入力台詞:0 = 何言ってるのよ
		ENDSELECT
	CASEELSE

ENDSELECT
IF レミリア_入力台詞:0 != "" 
	GOTO END
ENDIF

;─────────────────────────────────────── 
;●コマンド口上を呼び出す
;─────────────────────────────────────── 
IF IS_MPLY(レミリア)
	CALL KOJO_K10_NOON_BEFORE_PLAYER
ELSE
	CALL KOJO_K10_NOON_BEFORE_TARGET
ENDIF

;─────────────────────────────────────── 
;●無言チェック
;─────────────────────────────────────── 
FOR LOCAL:0, 0, 6
	IF レミリア_入力台詞:(LOCAL:0) != ""
		レミリア_表示台詞 = %レミリア_表示台詞%%レミリア_入力台詞:(LOCAL:0)%
	ENDIF
NEXT

;無言なら無言か曖昧にうなずく
IF レミリア_表示台詞 == ""
	SELECTCASE RAND:9
		CASE 1
			レミリア_入力台詞:0 = うーむ
		CASE 2
			レミリア_入力台詞:0 = 何か面白い奴もってきてよ
		CASE 3
			レミリア_入力台詞:0 = 噂を聞いたけど
		CASEELSE
			レミリア_入力台詞:0 = 紅茶をこぼしちゃった
	ENDSELECT
ENDIF

$END
RETURN 0

