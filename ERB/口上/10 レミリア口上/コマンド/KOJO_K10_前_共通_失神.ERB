;現在　KOJO_SYSTEM.ERBで、TCVAR:52 || TCVAR:53（快楽失神or酒酔睡眠や離脱状態）なら
;口上が抑制されるため体力不足以外は死に分岐
;酒酔い・快楽失神・疲労
@KOJO_K10_SYNCOPE
#DIM レミリア
レミリア = NAME_TO_CHARA("レミリア")

SELECTCASE RAND:6
	CASE 1
		レミリア_入力台詞:0 = あ
	CASE 2
		レミリア_入力台詞:0 = う
	CASE 3
		レミリア_入力台詞:0 = く
	CASE 4
		レミリア_入力台詞:0 = は
	CASE 5
		レミリア_入力台詞:0 = ふ
	CASEELSE
		レミリア_入力台詞:0 = ん
ENDSELECT

SELECTCASE RAND:6
	CASE 1
		レミリア_入力台詞:0 = %レミリア_入力台詞:0%あ
	CASE 2
		レミリア_入力台詞:0 = %レミリア_入力台詞:0%う
	CASE 3
		IF レミリア_入力台詞:0 != "く"
			レミリア_入力台詞:0 = %レミリア_入力台詞:0%く
		ELSE
			レミリア_入力台詞:0 = %レミリア_入力台詞:0%ふ
		ENDIF
	CASE 4
		IF レミリア_入力台詞:0 != "は"
			レミリア_入力台詞:0 = %レミリア_入力台詞:0%は
		ELSE
			レミリア_入力台詞:0 = %レミリア_入力台詞:0%ふ
		ENDIF
	CASE 5
		レミリア_入力台詞:0 = %レミリア_入力台詞:0%ふ
	CASEELSE
		IF レミリア_入力台詞:0 != "は"
			レミリア_入力台詞:0 = %レミリア_入力台詞:0%ぁう
		ELSEIF レミリア_入力台詞:0 != "ん"
			レミリア_入力台詞:0 = %レミリア_入力台詞:0%ん
		ELSE
			レミリア_入力台詞:0 = %レミリア_入力台詞:0%ぅん
		ENDIF
ENDSELECT

SELECTCASE RAND:9
	CASE 1
		レミリア_入力台詞:2 = んんふ
	CASE 2
		レミリア_入力台詞:2 = ふぁ……
	CASE 3
		レミリア_入力台詞:2 = ……ん、ぅ
	CASE 4
		レミリア_入力台詞:2 = ん……う
	CASE 5
		レミリア_入力台詞:2 = ふぅぁ
	CASE 6
		レミリア_入力台詞:2 = ……っ
	CASE 7
		レミリア_入力台詞:2 = ……う
	CASE 8
		レミリア_入力台詞:2 = は……
	CASEELSE
		レミリア_入力台詞:2 = あ……ん
ENDSELECT

SELECTCASE RAND:9
	CASE 1
		レミリア_入力台詞:3 = う、ふ
	CASE 2
		レミリア_入力台詞:3 = あ……ぁ
	CASE 3
		レミリア_入力台詞:3 = ふぁ
	CASE 4
		レミリア_入力台詞:3 = あん
	CASE 5
		レミリア_入力台詞:3 = は、ふ
	CASE 6
		レミリア_入力台詞:3 = んく……
	CASE 7
		レミリア_入力台詞:3 = う……
	CASE 8
		レミリア_入力台詞:3 = はぁ
	CASEELSE
		レミリア_入力台詞:3 = ふぅ……ん
ENDSELECT

RETURN 0

