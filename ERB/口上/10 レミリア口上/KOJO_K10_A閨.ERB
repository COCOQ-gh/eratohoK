;─────────────────────────────────────── 
;●「閨に呼ぶ」の開始時のセリフ ※単独で呼ばれた場合のみ呼ばれる
;─────────────────────────────────────── 
@KOJO_TRAIN_START_A2_K10
#DIM レミリア
レミリア = NAME_TO_CHARA("レミリア")

SIF CFLAG:レミリア:400 == 1
	RETURN 0

RESETCOLOR
DRAWLINE
SETCOLOR レミリア_口上カラー

IF TALENT:レミリア:虚ろ
	PRINTFORML 「う……んん……」
	PRINTFORMDL どうにか連れて来たが、%ANAME(レミリア)%は座り込んでしまった…
	GOTO END
ENDIF

;─────────────────────────────────────── 
;閨に呼ぶ初回
;─────────────────────────────────────── 
IF CFLAG:レミリア:201 == 0

	CFLAG:レミリア:201 = 1

	IF CFLAG:レミリア:400 == 0
		PRINTFORMDL 口上の使用の設定する
		PRINTFORMDL 
		PRINTDL [0] 口上を使用しない
		PRINTDL [1] レミリア口上
		$INPUT_LOOP
		INPUT
		IF RESULT == 0
			PRINTFORMDL 口上を使用しない
			CFLAG:レミリア:400 = 1
			GOTO END
		ELSEIF RESULT == 1
			PRINTFORMDW レミリア口上を使用する
			CFLAG:レミリア:400 = 2
			RESETCOLOR
			DRAWLINE
			SETCOLOR レミリア_口上カラー
		ELSE
			GOTO INPUT_LOOP
		ENDIF
	ENDIF

	;レミリア君主
	IF GET_COUNTRY_BOSS(CFLAG:レミリア:所属) == NAME_TO_CHARA("レミリア")
		IF KDVAR:レミリア:レミリア_レミリアからの勧誘
			PRINTFORML 「ご機嫌よう。%CALLMASTER_K10(レミリア)%」
			PRINTFORML 「改めて、ようこそ私の館へ。歓迎するわ」
			PRINTFORMW 「私はこの城の主%NAME_FORMAL(レミリア)%。誇り高き吸血鬼」
			PRINTL 
			PRINTFORML 「さっそくお招きに預かって、約束通り来たわよ」
			PRINTFORML 「女も自由に与えるとは言ったけど、私を呼ぶなんて豪胆ね」
			PRINTFORML 「かまわないけれど……退屈だけは、させないでね？」
		ELSE
			PRINTFORML 「ご機嫌よう。%CALLMASTER_K10(レミリア)%」
			PRINTFORML 「お招き頂いて%NAME_FORMAL(レミリア)%が来たわよ」
			PRINTFORML 「遊んであげる。退屈させないでね？」
		ENDIF
	;あなた君主
	ELSEIF GET_COUNTRY_BOSS(CFLAG:レミリア:所属) == MASTER
		PRINTFORML 「ご機嫌よう。%CALLMASTER_K10(レミリア)%」
		PRINTFORML 「お招き頂いて%NAME_FORMAL(レミリア)%が来たわよ」
		PRINTFORMW 「協力してあげるし、遊んでもあげる」
		PRINTL 
		PRINTFORML 「退屈だけは、させないでね？」
	;親しい知り合い
	ELSEIF CSTR:MASTER:99 == "咲夜" && CSTR:MASTER:99 == "パチュリー" && CSTR:MASTER:99 == "フラン" && CSTR:MASTER:99 == "小悪魔" && CSTR:MASTER:99 == "霊夢" && CSTR:MASTER:99 == "魔理沙"
		PRINTFORML 「ご機嫌よう。%CALLMASTER_K10(レミリア)%」
		PRINTFORML 「お招き頂いて、%NAME_FORMAL(レミリア)%が来たわよ」
		PRINTFORML 「愉しい夜になりそう。私を退屈させないでね？」
	;他
	ELSE
		PRINTFORML 「ご機嫌よう。%CALLMASTER_K10(レミリア)%」
		PRINTFORML 「お招き頂いて、%NAME_FORMAL(レミリア)%が来たわよ」
		PRINTFORML 「私を退屈させないでね？」
	ENDIF
	PRINTFORMDL %ANAME(レミリア)%は自ら寝台に上がってモブキャップを外し、ドレスとドロワーズを脱いでいく
	PRINTFORMDL 齢500年という吸血鬼の幼く柔らかな肉、膨らみ初めの乳房、
	PRINTFORMDL 陰毛のないつるりとしたワレメが%ANAME(MASTER)%の前に晒された


;─────────────────────────────────────── 
;閨に呼ぶ二回目以降
;─────────────────────────────────────── 
ELSE
	PRINTDATAL
		DATAFORM 「ご機嫌よう」
		DATAFORM 「楽しい夜になりそうね」
		DATAFORM 「今日は月が紅いから、楽しい夜になりそうね」
		DATAFORM 「お待たせしたわね」
	ENDDATA
	IF IS_SLAVE(レミリア) || IS_LOVER(レミリア)
		IF RAND:4 == 0
			PRINTFORMDL %ANAME(レミリア)%は笑顔で、白い頬がピンク色に染まっている
		ELSEIF RAND:3 == 0
			PRINTFORMDL 挨拶をした%ANAME(レミリア)%の声は既に喘ぎ声のように甘く、呼吸も乱れている
		ELSEIF RAND:2 == 0
			PRINTFORMDL %ANAME(レミリア)%は自ら寝台に上がり、ドレスとドロワーズを脱いでいく
			PRINTFORMDL 幼く柔らかな肉、膨らみ始めの乳房、陰毛のまるで無いワレメが%ANAME(MASTER)%の前に晒された
		ELSE
			PRINTFORMDL %ANAME(レミリア)%は自らドレスを脱ぎ、陶器のように白い肌を晒し始めた
		ENDIF
	ENDIF
ENDIF

;─────────────────────────────────────── 
;終了
;─────────────────────────────────────── 
$END
WAIT
RESETCOLOR
RETURN 0

;─────────────────────────────────────── 
;●「閨に呼ぶ」の終了時のセリフ ※単独で呼ばれた場合のみ呼ばれる
;─────────────────────────────────────── 
@KOJO_TRAIN_END_A2_K10
#DIM レミリア
#DIMS レミリア機嫌
レミリア = NAME_TO_CHARA("レミリア")

SIF CFLAG:レミリア:400 == 1
	RETURN 0

SETCOLOR レミリア_口上カラー

PRINTL 

;─────────────────────────────────────── 
;行動不能
;─────────────────────────────────────── 
IF TALENT:レミリア:虚ろ
	PRINTFORML 「う……んん……」
	PRINTFORMDL %ANAME(レミリア)%はぼうっとしてる
	GOTO END
ENDIF

;酒酔いによる行動不能
IF TCVAR:レミリア:53 == 1
	PRINTFORML 「……ううー……もう……飲めにゃ……ひ」
	PRINTFORMDL %ANAME(レミリア)%は潰れてしまった
	GOTO END
ELSEIF TCVAR:レミリア:53
	GOTO END
ENDIF

;快感のあまり気絶
IF TCVAR:レミリア:52 || BASE:レミリア:気力 <= 300
	PRINTFORML 「……ふあ❤　う……」
	PRINTFORMDL %ANAME(レミリア)%はくったりした手足を時々ぴくつかせて、恍惚と笑んでいる
	GOTO END
ENDIF

;疲労による行動不能
IF TCVAR:レミリア:51
	PRINTFORML 「う……んん……」
	PRINTFORMDL %ANAME(レミリア)%は疲れ果てた顔で眠っている
	GOTO END
ENDIF

;─────────────────────────────────────── 
;不機嫌
;─────────────────────────────────────── 
レミリア機嫌 = %TOSTR_EMOTION(レミリア)%
SELECTCASE レミリア機嫌
	CASE "恨", "怒", "憤"
		PRINTFORML 「血は飲まないでおいてあげるから、さっさとお帰り」
		GOTO END
	CASE "鬱", "悲", "憂"
		PRINTFORML 「つまらないなら帰って？」
		GOTO END
	CASE  "狂", "恐", "怯"
		PRINTFORML 「…………」
		GOTO END
ENDSELECT

;既成事実獲得後・一回きり
IF CFLAG:レミリア:200 < 4 && MARK:レミリア:2 == 3
	CFLAG:レミリア:200 = 4
	PRINTFORML 「うー……ん。こういう感じ、なのね」

ENDIF


IF CFLAG:レミリア:好感度 >= 800
	PRINTDATAL
		DATAFORM 「夜はまだこれからでしょ。明け方までは居させてもらうわ」
		DATAFORM 「もう終わりなの？　つまんないわ」
		DATAFORM 「夜明けにはまだ間があるわ。もう少しここに居るわね」
		DATAFORM 「空にはまだ月と星だけよ。もう寝てしまうの？」
		DATAFORM 「泊まっていきたいわ。昼は起きているなら、私がここに居てもいいでしょ」
	ENDDATA
ELSE
	PRINTDATAL
		DATAFORM 「暗い内に帰るわ」
		DATAFORM 「また遊びに来てあげる」
		DATAFORM 「退屈しのぎになったわ」
	ENDDATA
ENDIF

GOTO END

;─────────────────────────────────────── 
;終了
;─────────────────────────────────────── 
$END
WAIT
RESETCOLOR
RETURN 0

