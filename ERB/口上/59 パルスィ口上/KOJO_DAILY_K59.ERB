CALL KOJO_DAILY_K59_BAKUHATU
;はら
CALL KOJO_DAILY_K59_HARA


;----------------------------------
;爆発
;----------------------------------
@KOJO_DAILY_K59_BAKUHATU
#DIM パルスィ

パルスィ = NAME_TO_CHARA("パルスィ")


;ラブラブじゃないとダメよ
SIF TALENT:パルスィ:恋慕 == 0 && TALENT:パルスィ:親愛 == 0 && TALENT:パルスィ:恋人 == 0
	RETURN -1

;パルスィが同一勢力所属で捕虜でなく死んでいないなら3.5%で発生
SIF !CHECK_KOJO_DAILY_HAPPEN(パルスィ, 35, 1, 0, 1)
	RETURN -1


CALL KOJO_DAILY_START
PRINTFORMW 「憎い、憎い、ああ憎い。%ANAME(MASTER)%は憎くないの？」
PRINTFORMW いきなり%ANAME(パルスィ)%に問いかけられたが、なんのことだかわからなかった
PRINTFORMW 「あそこの恋人たち、私たちより幸せそうじゃない」
PRINTFORMW ……そうだろうか
PRINTFORMW 「そうなの。だから、%ANAME(MASTER)%、腕をまわしてちょうだい」
PRINTFORMW そう言うと、%ANAME(パルスィ)%は%ANAME(MASTER)%にぴったりくっついてきた
PRINTFORMW 「裏切らないでね。……私を。嫉妬深いんだから」

CFLAG:パルスィ:好感度 += 50



;----------------------------------
;はら
;----------------------------------
@KOJO_DAILY_K59_HARA
#DIM パルスィ

パルスィ = NAME_TO_CHARA("パルスィ")


;ラブラブじゃないとダメよ
SIF TALENT:パルスィ:恋慕 == 0 && TALENT:パルスィ:親愛 == 0 && TALENT:パルスィ:恋人 == 0
	RETURN -1

;パルスィが同一勢力所属で捕虜でなく死んでいないなら1.5%で発生
SIF !CHECK_KOJO_DAILY_HAPPEN(パルスィ, 15, 1, 0, 1)
	RETURN -1

LOCAL:0 = RAND:CHARANUM
LOCAL:1 = 0

WHILE (TALENT:(LOCAL:0):恋慕 == 0 && TALENT:(LOCAL:0):親愛 == 0 && TALENT:(LOCAL:0):恋人 == 0 && CFLAG:(LOCAL:0):好感度 < CFLAG:パルスィ:好感度)
	LOCAL:0 = RAND:CHARANUM
	LOCAL:1 += 1
	;適切なターゲットがいないならやめる
	SIF LOCAL:1 >= CHARANUM
		RETURN -1
WEND

COOLTIME:MASTER:0 += 4

CALL KOJO_DAILY_START
PRINTFORML ……タッタッタッタッタッタッタッタッタッ
PRINTFORMW ドンッ
PRINTFORMW %ANAME(パルスィ)%は後ろから抱きついてきた
PRINTFORMW 「……だから、言ったでしょう。嫉妬深いから、裏切らないでねって……」
PRINTFORMW %ANAME(パルスィ)%は%ANAME(MASTER)%の血を自分の腹に塗りながら笑った
PRINTFORMW 「馬鹿ね……ほんとうに……そして……おかえりなさい」
PRINTFORMW %ANAME(パルスィ)%は崩れ落ちる%ANAME(MASTER)%の身体をずっと抱いていた……
CALL COLORPRINTFORM(@"%ANAME(MASTER)%に4ターンのクールタイムがつきました", COLOR("警告"), "W")
