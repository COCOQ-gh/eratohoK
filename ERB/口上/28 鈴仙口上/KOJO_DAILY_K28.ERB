@KOJO_DAILY_K28()
#DIM 発生フラグ
発生フラグ = 0

;発情期
DAILY_NAME = 発情
CALL KOJO_DAILY_K28_ESTRUS
SIF RESULT != -1
	発生フラグ = 1
