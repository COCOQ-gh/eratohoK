;-------------------------------------------------
;「手引させる」の右カラム表示処理
;-------------------------------------------------
@SHOP_LIFE_EVENTBUY_SHOW22
CALL COLUMN_RIGHT_TITLE("対象者選択", "0", "1", "1", "0", "他勢力に内通者が必要")
CALL COLUMN_RIGHT_PRINTL
CALL COLUMN_RIGHT_LINE
CALL COLUMN_RIGHT_PRINTL

;２段組キャラリスト上とページ移動
CALL COLUMN_RIGHT_CHARALIST_TOP
CALL COLUMN_RIGHT_PRINTL
CALL COLUMN_RIGHT_LINE
CALL COLUMN_RIGHT_PRINTL

;助手を数える
LOCAL:1 = 0
FOR LOCAL:0, 0, CHARANUM
	;選択可能な条件を満たしているかどうかを判定
	TRYCALLFORM SHOP_LIFE_CHECKCHARA_SUB{FLAG:拠点フェイズ選択コマンド}(LOCAL:0)
	IF RESULT == 1
		;選択中の人数を数える
		IF CFLAG:(LOCAL:0):夜這いの助手
			LOCAL:1 ++
		ENDIF
	ELSE
		;条件を満たしていなければ強制的にＯＦＦ
		CFLAG:(LOCAL:0):夜這いの助手 = 0
	ENDIF
NEXT

PRINT 誰に手引きさせますか？
CALL COLUMN_RIGHT_PRINTL
CALL COLUMN_RIGHT_LINE
CALL COLUMN_RIGHT_PRINTL

;２段組キャラリスト下とページ移動
CALL COLUMN_RIGHT_CHARALIST_BOTTOM

RETURN 0

;-------------------------------------------------
;「手引させる」のリスト１入力処理
;-------------------------------------------------
@SHOP_LIFE_USERSHOP22(ARG:0)
#DIM 好感度他減少

;SHOW_INFOの初期画面を基本情報にする
FLAG:能力表示モード = 0

$SHOW_LOOP_INFO_T

;対象キャラの情報を表示
DRAWLINE
CALL SHOW_INFO(ARG:0)
DRAWLINE

PRINTFORML 内通者の手引きで%ANAME(ARG:0)%を罠にかけます
PRINTFORML よろしいですか？
CALL ASK_YN
IF RESULT == 0
	CVARSET CFLAG, 6, 0
	FOR LOCAL:0, 0, CHARANUM
		IF LOCAL:0 != MASTER && CFLAG:(LOCAL:0):夜這いの助手
			CFLAG:(LOCAL:0):調教参加フラグ = 1
		ENDIF
	NEXT
	;夜這い経験
	EXP:ARG:59 ++
	;調教初期設定
	CALL TRAIN_TARGET_SETTING(ARG:0)
	;メインターゲットを調教対象に設定
	VARSET PRISONER_TARGET, -1
	PRISONER_TARGET:0 = ARG:0
	;初期のウフフフラグをＯＮにする
	FLAG:ウフフフラグ = 1
	;捕虜調教モード
	FLAG:調教モード = 2
	;夜這いフラグ
	FLAG:夜這い = 1

	;行動開始時の共通設定
	CALL START_TRAIN_COMMON
	好感度他減少 = LIMIT(RAND(100, 200) - ABL:ARG:欲望 * 20 - ABL:ARG:奉仕 * 20 ,0, 100)
	SIF TEBIKI_ABLE(ARG) == 2
		好感度他減少 = 0
	SIF TALENT:ARG:烙印
		好感度他減少 /= 2
	SIF CFLAG:(ARG:0):好感度 > 0
		CFLAG:(ARG:0):好感度 -= 好感度他減少
	SIF CFLAG:(ARG:0):従属度 > 0
		CFLAG:(ARG:0):従属度 -= 好感度他減少
	SIF CFLAG:(ARG:0):依存度 > 0
		CFLAG:(ARG:0):依存度 -= 好感度他減少
	;相手国との関係悪化（適当）
	CALL CHANGE_RELATION_C_TO_C(CFLAG:ARG:所属, CFLAG:MASTER:所属, RAND(50, 100) * -1, RAND(50, 100))
	REDRAW 1
	RETURN 1
ENDIF
REDRAW 1
RETURN 0

