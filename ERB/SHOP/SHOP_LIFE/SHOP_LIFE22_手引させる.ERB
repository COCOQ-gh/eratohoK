@SHOP_LIFE_USERSHOP_SUB22(ARG:0)
;参加キャラの数を数える
LOCAL:5 = 0
FOR LOCAL:0, 0, CHARANUM
	IF CFLAG:(LOCAL:0):夜這いの助手
		LOCAL:5 ++
	ENDIF
NEXT
;1人まで
IF CFLAG:(ARG:0):夜這いの助手 || LOCAL:5 < 1
	;内通参加フラグを反転
	CFLAG:(ARG:0):夜這いの助手 = !CFLAG:(ARG:0):夜這いの助手
ENDIF

