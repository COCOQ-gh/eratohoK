;-------------------------------------------------
;「手引させる」の名称
;-------------------------------------------------
@SHOP_LIFE_NAME22
RESULTS:0 '= "手引させる"

;-------------------------------------------------
;「手引させる」の選択可否
;-------------------------------------------------
@SHOP_LIFE_CHECK22
FOR LOCAL, 0, MAX_COUNTRY
	SIF !IS_COUNTRY(LOCAL) || LOCAL == CFLAG:MASTER:所属
		CONTINUE
	SIF TMP_COUNTRY_IS_NEIBORING:(CFLAG:MASTER:所属):LOCAL
		GOTO FOUND
NEXT

RETURN 0

$FOUND

SIF CFLAG:MASTER:捕虜先
	RETURN 0
SIF CFLAG:MASTER:行動不能状態 == 1 || COOLTIME:MASTER:0 > 1
	RETURN 0

;通常はCHECK真CHECKCHARA真なら通すが
;手引きはCHECKCHARA_SUBが必須のためここでチェック
;内通者の選択可能キャラ存在チェック
LOCAL:1 = 0
FOR LOCAL:0, 1, CHARANUM
	CALL SHOP_LIFE_CHECKCHARA_SUB_NAITSUU(LOCAL:0)
	IF RESULT
		LOCAL:1 = 1
		BREAK
	ENDIF
NEXT

;内通者になれるキャラが存在しない
SIF LOCAL:1 == 0
	RETURN 0

RETURN 1

;-------------------------------------------------
;「手引させる」の選択可能キャラ存在判定
;-------------------------------------------------
@SHOP_LIFE_CHECKCHARA22(ARG:0)
;隣接している都市がない
SIF !TMP_COUNTRY_IS_NEIBORING:(CFLAG:MASTER:所属):(CFLAG:(ARG:0):所属)
	RETURN 0

;内通者として選択したキャラ自身は不可
SIF CFLAG:(ARG:0):夜這いの助手
	RETURN 0

;非主人公、捕虜ではない、別勢力、君主ではない、どこかの勢力に所属している（放浪、未登場、死亡済みではない）
IF (ARG:0 != MASTER && !CFLAG:(ARG:0):捕虜先 && CFLAG:MASTER:所属 != CFLAG:(ARG:0):所属 && GET_ID(ARG:0) != COUNTRY_BOSS:(CFLAG:(ARG:0):所属) && CFLAG:(ARG:0):所属 && !IS_SP_CHARA(CFLAG:(ARG:0):所属))
	IF TEBIKI_ABLE(ARG:0)
		RETURN CHECK91(ARG:0, 2, 1)
	ENDIF
	RETURN 2
ENDIF
RETURN 0

;-------------------------------------------------
;「手引させる」の内通者の選択可能キャラ存在判定
;-------------------------------------------------
@SHOP_LIFE_CHECKCHARA_SUB22(ARG:0)
CALL SHOP_LIFE_CHECKCHARA_SUB_NAITSUU(ARG:0)
RETURN RESULT

;-------------------------------------------------
;「夜這いする」の追加チェック
;-------------------------------------------------
@SHOP_LIFE_CHECK_ADDITIONAL_CHECK22()
RETURN !FLAG:クリアフラグ

;-------------------------------------------------
;「手引させる」の陥落/能力判定
;-------------------------------------------------
@TEBIKI_ABLE(ARG:0)
#FUNCTION
SIF TALENT:(ARG:0):親愛 || TALENT:(ARG:0):恋慕 || TALENT:(ARG:0):隷属 || TALENT:(ARG:0):服従
	RETURNF 2
LOCAL:1 = ABL:MASTER:武闘
LOCAL:2 = ABL:MASTER:知略
LOCAL:3 = 2
SIF TALENT:(ARG:0):烙印
	LOCAL:3 = 1

LOCAL:4 = 0
FOR LOCAL,1, CHARANUM
	IF CFLAG:LOCAL:夜這いの助手
		LOCAL:1 += ABL:LOCAL:武闘
		LOCAL:2 += ABL:LOCAL:知略
		IF CFLAG:LOCAL:所属 != CFLAG:(ARG:0):所属
			RETURNF 0
		ENDIF
		LOCAL:4 = 1
	ENDIF
NEXT

;内通者がいなければ0で戻す
SIF LOCAL:4 == 0
	RETURNF 0
SIF (LOCAL:1 > ABL:ARG:武闘 * LOCAL:3 / 2 && LOCAL:2 > ABL:ARG:知略 * LOCAL:3) || (LOCAL:1 > ABL:ARG:武闘 * LOCAL:3 && LOCAL:2 > ABL:ARG:知略 * LOCAL:3 / 2) 
	RETURNF 1
RETURNF 0

;-------------------------------------------------
;「手引させるの左カラムメニューの入力処理
;-------------------------------------------------
@SHOP_LIFE_EVENTBUY22
FLAG:拠点フェイズページ = 1
FLAG:夜這い = 1
FOR LOCAL:0, 1, CHARANUM
	CFLAG:(LOCAL:0):夜這いの助手 = 0
NEXT
RETURN 0

;-------------------------------------------------
;「手引させる」の右カラムキャラリスト１のボタン（関数未指定なら選択中色なし表示）
;-------------------------------------------------
@SHOP_LIFE_LIST1_BUTTON22(ARG:0, ARG:1)
;内通者の存在チェック
LOCAL:1 = 0
FOR LOCAL:0, 1, CHARANUM
	IF CFLAG:(LOCAL:0):夜這いの助手
		LOCAL:1 = 1
		BREAK
	ENDIF
NEXT
;内通者が指定されていない
IF LOCAL:1 == 0
	;キャラ, 選択中カラー表示フラグなし, ボタン番号に追加する数値, 強制的に選択不可色表示
	CALL COLUMN_RIGHT_CHARALIST_BUTTON(ARG:0, 0, 100, 2, 0, "TOP")
ELSE
	;キャラ, 選択中カラー表示フラグなし, ボタン番号に追加する数値, CHECKCHARAの戻り値
	CALL COLUMN_RIGHT_CHARALIST_BUTTON(ARG:0, 0, 100, ARG:1, 0, "TOP")
ENDIF
RETURN

