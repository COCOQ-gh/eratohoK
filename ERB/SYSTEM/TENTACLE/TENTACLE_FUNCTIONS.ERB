	EXP:LOCAL:絶頂経験 = 500
	ABL:LOCAL:武闘 = 50 + RAND:15 + 5 * SP_COUNTRY_RANK:(特殊勢力_触手)
	ABL:LOCAL:知略 = 30 + RAND:15 + 3 * SP_COUNTRY_RANK:(特殊勢力_触手)
	ABL:LOCAL:政治 = 35 + RAND:10 + 3 * SP_COUNTRY_RANK:(特殊勢力_触手)
