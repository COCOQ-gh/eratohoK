;-------------------------------------------------
;データのセーブ
;-------------------------------------------------
@SAVE_GAME()
#DIM FIRST_LINE
#DIM CONST 最大ページ数 = 10
#DIM CONST セーブ数 = 20
#DIM 現在ページ数
#DIM ロード可能, 200
#DIMS セーブ名, 200

IF 現在ページ数 <= 0
	現在ページ数 = 1
ELSEIF 現在ページ数 > 最大ページ数
	現在ページ数 = 最大ページ数
ENDIF

FOR LOCAL, 0, VARSIZE("ロード可能")
	CHKDATA LOCAL
	;CHKDATAは読めるデータのとき0を返す　どうかしてるぜ
	ロード可能:LOCAL = (RESULT == 0)
	IF RESULT != 1
		セーブ名:LOCAL = %RESULTS%
	ELSE
		セーブ名:LOCAL = ----
	ENDIF
NEXT

FIRST_LINE = LINECOUNT

$SHOW_LOOP

DRAWLINE
FOR LOCAL, (現在ページ数 - 1) * セーブ数, 現在ページ数 * セーブ数
	IF ロード可能:LOCAL
		RESETCOLOR
	ELSE
		SETCOLOR COLOR("選択不可")
	ENDIF
	PRINTFORML [{LOCAL, 3, LEFT}] %セーブ名:LOCAL%
NEXT
RESETCOLOR

DRAWLINE
PRINTBUTTON "[前のページ]", 9997
PRINTFORM  Page{現在ページ数}/{最大ページ数} 
PRINTBUTTON "[次のページ]", 9998
PRINTL
DRAWLINE
PRINTBUTTON "[戻る]", 9999


INPUT

;セーブ
IF INRANGE(RESULT, 0, VARSIZE("ロード可能") - 1)
	LOCAL = RESULT
	IF ロード可能:LOCAL
		CALL COLORPRINT(@"{LOCAL}番にはロード可能なセーブデータがあります　上書きしますか？", COLOR("注意"), "L")
		CALL ASK_YN
		IF RESULT == 1
			CLEARLINE LINECOUNT - FIRST_LINE
			GOTO SHOW_LOOP
		ENDIF
	ENDIF
	DUMPRAND
	SAVEDATA LOCAL, SAVEDATA_NAME_STR()
	PRINTFORML セーブしました
	RETURN 1
ELSEIF RESULT == 9997
	現在ページ数 = ROUND_DECREMENT(現在ページ数, 1, 最大ページ数)
ELSEIF RESULT == 9998
	現在ページ数 = ROUND_INCREMENT(現在ページ数, 1, 最大ページ数)
ELSEIF RESULT == 9999
	RETURN 0
ENDIF

CLEARLINE LINECOUNT - FIRST_LINE
GOTO SHOW_LOOP

;-------------------------------------------------
;データのロード
;-------------------------------------------------
@LOAD_GAME()
#DIM FIRST_LINE
#DIM CONST 最大ページ数 = 10
#DIM CONST セーブ数 = 20
#DIM 現在ページ数
#DIM ロード可能, 200
#DIMS セーブ名, 200
#DIM オートセーブロード可能, AUTOSAVE_DOMAIN_NUM
#DIMS オートセーブ名, AUTOSAVE_DOMAIN_NUM

LOADGLOBAL

IF 現在ページ数 <= 0
	現在ページ数 = 1
ELSEIF 現在ページ数 > 最大ページ数
	現在ページ数 = 最大ページ数
ENDIF

FOR LOCAL, 0, VARSIZE("ロード可能")
	CHKDATA LOCAL
	;CHKDATAは読めるデータのとき0を返す　どうかしてるぜ
	ロード可能:LOCAL = (RESULT == 0)
	IF RESULT != 1
		セーブ名:LOCAL = %RESULTS%
	ELSE
		セーブ名:LOCAL = ----
	ENDIF
NEXT

FOR LOCAL, 0, AUTOSAVE_DOMAIN_NUM
	CHKDATA 1000 + LOCAL
	オートセーブロード可能:LOCAL = (RESULT == 0)
	IF RESULT != 1
		オートセーブ名:LOCAL = %RESULTS%
	ELSE
		オートセーブ名:LOCAL = ----
	ENDIF
NEXT

FIRST_LINE = LINECOUNT

$SHOW_LOOP

DRAWLINE
FOR LOCAL, (現在ページ数 - 1) * セーブ数, 現在ページ数 * セーブ数
	IF ロード可能:LOCAL
		RESETCOLOR
	ELSE
		SETCOLOR COLOR("選択不可")
	ENDIF
	CALL PRINTBUTTON_EXL(@"[{LOCAL, 3, LEFT}] %セーブ名:LOCAL%", LOCAL, ロード可能)
NEXT
RESETCOLOR

DRAWLINE
LOCAL = ROUND_DECREMENT(AUTOSAVE_DOMAIN, 0, AUTOSAVE_DOMAIN_NUM - 1)
LOCAL:1 = LOCAL
DO
	IF オートセーブロード可能:LOCAL
		RESETCOLOR
	ELSE
		SETCOLOR COLOR("選択不可")
	ENDIF
	PRINTFORM [{1000 + LOCAL}] %オートセーブ名:LOCAL%
	IF LOCAL == ROUND_DECREMENT(AUTOSAVE_DOMAIN, 0, AUTOSAVE_DOMAIN_NUM - 1)
		CALL COLORPRINT("  最新", COLOR("注意"), "L")
	ELSE
		PRINTL
	ENDIF
	RESETCOLOR
	LOCAL = ROUND_DECREMENT(LOCAL, 0, AUTOSAVE_DOMAIN_NUM - 1)
LOOP LOCAL != LOCAL:1
DRAWLINE

PRINTBUTTON "[前のページ]", 9997
PRINTFORM  Page{現在ページ数}/{最大ページ数} 
PRINTBUTTON "[次のページ]", 9998
PRINTL
DRAWLINE
PRINTBUTTON "[戻る]", 9999

INPUT

;ロード
IF INRANGE(RESULT, 0, VARSIZE("ロード可能") - 1)
	LOCAL = RESULT
	IF !ロード可能:LOCAL
		CLEARLINE LINECOUNT - FIRST_LINE
		GOTO SHOW_LOOP
	ENDIF
	LOADDATA LOCAL
ELSEIF INRANGE(RESULT, 1000, 1000 + AUTOSAVE_DOMAIN_NUM - 1)
	LOCAL = RESULT
	IF !オートセーブロード可能:(LOCAL - 1000)
		CLEARLINE LINECOUNT - FIRST_LINE
		GOTO SHOW_LOOP
	ENDIF
	LOADDATA LOCAL
ELSEIF RESULT == 9997
	現在ページ数 = ROUND_DECREMENT(現在ページ数, 1, 最大ページ数)
ELSEIF RESULT == 9998
	現在ページ数 = ROUND_INCREMENT(現在ページ数, 1, 最大ページ数)
ELSEIF RESULT == 9999
	RETURN 0
ENDIF

CLEARLINE LINECOUNT - FIRST_LINE
GOTO SHOW_LOOP

