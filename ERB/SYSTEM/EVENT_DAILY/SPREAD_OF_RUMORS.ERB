DRAWLINE
FOR LOCAL, 0, CHARANUM
	IF TALENT:LOCAL:風説流布 && 5 > RAND:100 && CFLAG:LOCAL:所属 && !CFLAG:LOCAL:捕虜先 && !COUNTRY_IS_CLOSED:(CFLAG:LOCAL:所属)
		SETCOLOR COLOR("注意")
		PRINTFORML %ANAME(GET_COUNTRY_BOSS(CFLAG:LOCAL:所属))%所属の%ANAME(LOCAL)%は、自国の良い噂を流した！
		RESETCOLOR
		FOR LOCAL:1, 0, MAX_COUNTRY
			SIF IS_COUNTRY(LOCAL:1) && LOCAL:1 != CFLAG:LOCAL:所属 && !COUNTRY_IS_CLOSED:(CFLAG:LOCAL:所属)
				CALL CHANGE_RELATION_C_TO_C(LOCAL:1, CFLAG:LOCAL:所属, 30, -30)
			NEXT
		NEXT
	ENDIF
NEXT