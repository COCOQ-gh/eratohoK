;行動開始時の共通処理
;全ての参加キャラについて処理
FOR LOCAL:0, 0, CHARANUM
	IF CFLAG:(LOCAL:0):調教参加フラグ
		;現在の機嫌を保存
		FOR LOCAL:1, 0, 10
			CFLAG:(LOCAL:0):(LOCAL:1 + 190) = PALAM:(LOCAL:0):(LOCAL:1 + 10)
		NEXT
		;参加済みに
		CFLAG:(LOCAL:0):行動済み = 1
	ENDIF
NEXT
