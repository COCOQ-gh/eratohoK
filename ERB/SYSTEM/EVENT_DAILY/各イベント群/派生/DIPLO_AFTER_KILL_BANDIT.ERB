;全員の調教参加フラグを解除
CVARSET CFLAG, 6, 0
LOCAL:2 = 0
FOR LOCAL:0, 0, CHARANUM
	IF CFLAG:(LOCAL:0):所属 == GET_COUNTRY_FROM_ID(SP_COUNTRY_ID:(特殊勢力_野盗)) && TALENT:(LOCAL:0):特殊勢力素質 == 特殊勢力_野盗 && LOCAL:2 < 6
		CFLAG:(LOCAL:0):調教参加フラグ = 1
		CFLAG:(LOCAL:0):能力固定フラグ = 1
		LOCAL:2 ++
	ENDIF
NEXT
;捕虜逆調教モード
FLAG:調教モード = 5
;ウフフモード
FLAG:ウフフフラグ = 1
;アイテムを一通り追加
ITEM:A_ローター = 1
ITEM:A_バイブ = 1
ITEM:A_アナルバイブ = 1
ITEM:A_ペニスバンド = 1
ITEM:A_オナホール = 1
ITEM:A_クリキャップ = 1
ITEM:A_ニプルキャップ = 1
