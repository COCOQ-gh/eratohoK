IF 参加者数
	ループ数 = MIN(4, VARSIZE("参加者") - 参加者数)
ELSE
	ループ数 = 4
ENDIF

FOR LOCAL:0, 0, ループ数
	;確率で犬豚が対象に
	IF !RAND:15
		FOR LOCAL:1, 0, CHARANUM
			IF CFLAG:(LOCAL:1):所属 == ゴブリン && IS_ANIMAL(LOCAL:1) && !CFLAG:(LOCAL:1):調教参加フラグ
				参加者:参加者数 =  LOCAL:1
				参加者数 ++
				CFLAG:(LOCAL:1):調教参加フラグ = 1
				BREAK
			ENDIF
		NEXT
		CALL ADD_ANIMAL(@"\@ RAND:2 ? 犬 # 豚 \@", LOCAL:6)
