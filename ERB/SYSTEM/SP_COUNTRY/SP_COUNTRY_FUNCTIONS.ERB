;---------------------------
;対象キャラが対象勢力による調教でFORCE_FUCKされたときに、CFLAGが減少するか
;---------------------------
@SP_TRAIN_IS_DECREASE_CFLAG(対象, 勢力番号)
#FUNCTION
#DIM 対象
#DIM 勢力番号
LOCAL = SP_COUNTRY_TO_CONST(勢力番号)
;士官か奴隷としてスタートし、対象が堕ちている
SIF GROUPMATCH(SP_COUNTRY_START:LOCAL, 特殊勢力スタート_士官, 特殊勢力スタート_奴隷) && GETBIT(TALENT:対象:特殊勢力陥落系, LOCAL)
	RETURNF 0
;MASTERが対象勢力に所属している、または捕虜で対象が堕ちている
SIF CFLAG:MASTER:所属 == 勢力番号 || (CFLAG:MASTER:捕虜先 == 対象 && GETBIT(TALENT:対象:特殊勢力陥落系, LOCAL))
	RETURNF 0
RETURNF 1
;-------------------------------------------------
;渡された勢力番号が特殊勢力であるかを判断する
;-------------------------------------------------	
@IS_SP_COUNTRY(勢力)
#FUNCTION
#DIM 勢力
SIF 勢力 < 0 || 勢力 >= MAX_COUNTRY
	RETURNF 0
FOR LOCAL, 0, VARSIZE("SP_COUNTRY_ID")
	SIF COUNTRY_EVENT_ID:(勢力) == SP_COUNTRY_ID:LOCAL
		RETURNF 1
NEXT
RETURNF 0

;-------------------------------------------------
;対象が渡された勢力に調教されうるかを判断する
;-------------------------------------------------	
@IS_TRAIN_BY_SP_COUNTRY(対象, 勢力番号)
#FUNCTION
#DIM 対象
#DIM 勢力番号
;その勢力所属でも、その勢力の捕虜でもないキャラは駄目（あたりまえ）
SIF CFLAG:対象:所属 != 勢力番号 && CFLAG:対象:捕虜先 != 勢力番号
	RETURNF 0
;特殊勢力のキャラは駄目
SIF TALENT:対象:特殊勢力素質
	RETURNF 0
;MASTERは士官スタートなら抜ける
SIF 対象 == MASTER && SP_COUNTRY_START:SP_COUNTRY_TO_CONST(勢力番号) == 特殊勢力スタート_士官
	RETURNF 0
;軟禁中はスキップ
SIF CFLAG:対象:9 == 勢力番号 && CFLAG:対象:29
	RETURNF 0
;テキスト非表示な性別とかならスキップ
SIF	!TRAIN_IS_SHOW_TEXT(対象)
	RETURNF 0
;その勢力に所属するMASTER以外の堕ちていないキャラはスキップ
;綺麗なまま捕らえておきたい人向け
;	SIF !GETBIT(TALENT:対象:特殊勢力陥落系, COUNTRY_TO_CONST(勢力番号)) && CFLAG:対象:所属 == 勢力番号 && 対象 != MASTER
;		RETURNF 0
;対象勢力に所属して、しかも堕ちているキャラは2/3でカット（いちいち出るとうっとうしいので）
SIF CFLAG:対象:所属 == 勢力番号 && GETBIT(TALENT:対象:特殊勢力陥落系, SP_COUNTRY_TO_CONST(勢力番号)) && RAND:3
	RETURNF 0
RETURNF 1

;-------------------------------------------------
;対象が渡された勢力に寝返るかどうか判断する
;-------------------------------------------------	
@IS_BETRAY_TO_SP_COUNTRY(対象, 勢力番号)
#FUNCTION
#DIM 対象
#DIM 勢力番号
;堕ちていないなら、ターン数不足なら駄目
SIF !GETBIT(TALENT:対象:特殊勢力陥落系, SP_COUNTRY_TO_CONST(勢力番号)) && CFLAG:対象:調教カウンタ < TRAIN_FALLEN_TERM:3
	RETURNF 0
;堕ちていて、その勢力に士官しているならスキップ（既に寝返っているので。士官でない場合、一度よそに登用されるかなにかしているので例外）
SIF CFLAG:対象:所属 == 勢力番号 && GETBIT(TALENT:対象:特殊勢力陥落系, SP_COUNTRY_TO_CONST(勢力番号))
	RETURNF 0
RETURNF 1

;-------------------------------------------------
;渡されたキャラが特殊勢力の陥落系素質を持っているかを判断する
;-------------------------------------------------	
@IS_FALLEN_TO_SP_COUNTRY(対象)
#FUNCTION
#DIM 対象
RETURNF (TALENT:対象:特殊勢力陥落系 != 0)

;-------------------------------------------------
;渡されたキャラが特殊勢力のキャラであるかどうかを判断する
;-------------------------------------------------	
@IS_SP_COUNTRY_CHARA(対象)
#FUNCTION
#DIM 対象
RETURNF TALENT:対象:特殊勢力素質


;---------------------------------------------------
;与えられた勢力番号を、対応する定数割り当てに変換する
;勢力番号だけ分かる状態で定数割り当てが拾いたいときに
;---------------------------------------------------
@SP_COUNTRY_TO_CONST(勢力番号)
#FUNCTION
#DIM 勢力番号
SELECTCASE COUNTRY_EVENT_ID:勢力番号
	CASE SP_COUNTRY_ID:特殊勢力_野盗
		RETURNF 特殊勢力_野盗
	CASE SP_COUNTRY_ID:特殊勢力_触手
		RETURNF 特殊勢力_触手
	CASE SP_COUNTRY_ID:特殊勢力_外来人
		RETURNF 特殊勢力_外来人
	CASE SP_COUNTRY_ID:特殊勢力_自警団
		RETURNF 特殊勢力_自警団
	CASE SP_COUNTRY_ID:特殊勢力_ホフゴブリン
		RETURNF 特殊勢力_ホフゴブリン
	CASE SP_COUNTRY_ID:特殊勢力_サキュバス
		RETURNF 特殊勢力_サキュバス
ENDSELECT
RETURNF 0

