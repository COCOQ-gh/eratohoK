@COM_NAME501
IF LOCAL:0 >= 0 && CFLAG:(MTAR:0):28 <= 2
	RESULTS = 本を読む
ELSE
	RESULTS = 兵法を教える
ENDIF

;-------------------------------------------------
;選択可否判定
;-------------------------------------------------
@COM_ABLE501
;共通部分
CALL COM_ABLE_COMMON(501)
SIF RESULT == 0
	RETURN 0
;主人公がプレイヤーのとき限定
SIF MPLY:0 != MASTER
	RETURN 0
RETURN 1

;-------------------------------------------------
;メイン処理
;-------------------------------------------------
@COM501
;本を読む
IF LOCAL:0 >= 0 && CFLAG:(MTAR:0):28 <= 2
	;成長度を加算
	CFLAG:(MTAR:0):131 +=POWER(2, 5 - CFLAG:(MTAR:0):111)
	;選択回数を加算
	CFLAG:(MTAR:0):111 ++

;兵法を教える
ELSE
	;成長度を加算
	CFLAG:(MTAR:0):141 += (150 + ABL:(MPLY:0):知略) / POWER(2, MAX(CFLAG:(MTAR:0):121, 63))
	;選択回数を加算
	CFLAG:(MTAR:0):121 ++
ENDIF

RETURN 1

