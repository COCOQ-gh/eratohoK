;政治を教える

;-------------------------------------------------
;コマンド名称
;-------------------------------------------------
@COM_NAME502
IF LOCAL:0 >= 0 && CFLAG:(MTAR:0):28 <= 2
	RESULTS = 城下を歩く
ELSE
	RESULTS = 政治を教える
ENDIF

;-------------------------------------------------
;選択可否判定
;-------------------------------------------------
@COM_ABLE502
;共通部分
CALL COM_ABLE_COMMON(502)
SIF RESULT == 0
	RETURN 0
;主人公がプレイヤーのとき限定
SIF MPLY:0 != MASTER
	RETURN 0
RETURN 1

;-------------------------------------------------
;メイン処理
;-------------------------------------------------
@COM502
;城下で遊ぶ
IF LOCAL:0 >= 0 && CFLAG:(MTAR:0):28 <= 2
	;成長度を加算
	CFLAG:(MTAR:0):132 += POWER(2, 5 - CFLAG:(MTAR:0):112)
	;選択回数を加算
	CFLAG:(MTAR:0):112 ++

;政治を教える
ELSE
	;成長度を加算
	CFLAG:(MTAR:0):142 += (150 + ABL:(MPLY:0):政治) / POWER(2, CFLAG:(MTAR:0):122)
	;選択回数を加算
	CFLAG:(MTAR:0):122 ++
ENDIF

RETURN 1

;-------------------------------------------------
;地の文(前文)
;-------------------------------------------------
@COM_TEXT_BEFORE502
;城下で遊ぶ
IF LOCAL:0 >= 0 && CFLAG:(MTAR:0):28 <= 2
	PRINTFORMW %ANAME(MPLY:0)%は%ANAME(MTAR:0)%と城下町を散歩した

;政治を教える
ELSE
	PRINTFORMW %ANAME(MPLY:0)%は%ANAME(MTAR:0)%に政治の勉強をさせた
ENDIF

