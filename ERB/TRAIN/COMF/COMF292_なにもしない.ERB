@COM_ABLE292
;共通部分
CALL COM_ABLE_COMMON(299)
SIF RESULT == 0
	RETURN 0
;プレイヤーは最大で1人まで
SIF MPLY_NUM <= 0 || MPLY_NUM > 1
	RETURN 0
;主人公がプレイヤーのとき限定
SIF MPLY:0 != MASTER
	RETURN 0
RETURN 1

;-------------------------------------------------
;メイン処理
;-------------------------------------------------
@COM292
PRINTFORML %ANAME(MPLY:0)%はなにもしなかった……

;体力と気力を回復
FOR LOCAL, 0, CHARANUM
	IF IS_PARTICIPATE_TRAIN(LOCAL:0)
		BASE:LOCAL:体力 = MIN(MAXBASE:LOCAL:体力, BASE:LOCAL:体力 + MAXBASE:LOCAL:体力 / RAND(10, 20))
		BASE:LOCAL:気力 = MIN(MAXBASE:LOCAL:体力, BASE:LOCAL:気力 + MAXBASE:LOCAL:気力 / RAND(10, 20))

		SIF FLAG:調教モード == 調教_捕虜調教 && FINDELEMENT(PRISONER_TARGET, LOCAL) != -1
			BASE:LOCAL:精神力 = MIN(MAXBASE:LOCAL:精神力, BASE:LOCAL:精神力 + MAXBASE:LOCAL:精神力 / RAND(10, 20))

		IF TCVAR:(LOCAL:0):51
			SOURCE:(LOCAL:0):気絶回復 = RAND(100, 300)
		ELSE
			BASE:LOCAL:体力 = MIN(MAXBASE:LOCAL:体力, BASE:LOCAL:体力 + MAXBASE:LOCAL:体力 / RAND(10, 20))
		ENDIF

		IF TCVAR:(LOCAL:0):52
			SOURCE:(LOCAL:0):気絶回復 = RAND(100, 300)
		ELSE
			BASE:LOCAL:気力 = MIN(MAXBASE:LOCAL:体力, BASE:LOCAL:気力 + MAXBASE:LOCAL:気力 / RAND(10, 20))
		ENDIF

	ENDIF
NEXT

RETURN 1
