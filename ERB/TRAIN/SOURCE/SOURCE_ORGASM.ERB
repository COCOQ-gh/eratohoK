IF LOCAL:1 >= 0 && IS_ANIMAL(LOCAL:1)
	SIF TALENT:(LOCAL:1):犬
		ARG:1 = GET_SPERM_ID("犬")
	SIF TALENT:(LOCAL:1):豚
		ARG:1 = GET_SPERM_ID("豚")
	SIF TALENT:(LOCAL:1):馬
		ARG:1 = GET_SPERM_ID("馬")
ENDIF
