	FOR LOCAL:0, 440, 460
		IF TCVAR:(ARG:0):(LOCAL:0) <= 0
			;中出ししたキャラのIDと精液量を記録
			TCVAR:(ARG:0):(LOCAL:0) = ARG:1
			TCVAR:(ARG:0):(LOCAL:0 + 20) = ARG:2
			BREAK
		ENDIF
	NEXT
ENDIF
