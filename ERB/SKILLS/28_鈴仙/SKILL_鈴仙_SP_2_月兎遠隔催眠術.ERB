;対象選択
@SKILL_28_SP_2_SETTARGET(発動者, 発動番号, 発動側, 発動勢力, 発動部隊, 対象勢力, 対象部隊)
#DIM 発動者
#DIM 発動番号
#DIM スキル
#DIMS ジャンル
#DIM 発動側
#DIM 発動勢力
#DIM 発動部隊
#DIM 対象側
#DIM 対象勢力
#DIM 対象部隊
対象側 = !発動側
SIF BATTLE_COMMANDER_NUM:対象側 == 0
	RETURN 0
COMBAT_SKILL_TARGET = RAND:(BATTLE_COMMANDER_NUM:対象側)
RETURN 1

;発動判定
@SKILL_28_SP_2_CAN_INVOKE(発動者, 発動番号, 発動側, 発動勢力, 発動部隊, 対象勢力, 対象部隊)
#DIM 発動者
#DIM 発動番号
#DIM スキル
#DIMS ジャンル
#DIM 発動側
#DIM 発動勢力
#DIM 発動部隊
#DIM 対象側
#DIM 対象勢力
#DIM 対象部隊
対象側 = !発動側
RETURN (発動部隊 < 0 ? BATTLE_COMMANDER_NUM:発動側 <= 1 # BATTLE_COMMANDER_NUM:発動側 <= 2) && BATTLE_COMMANDER_NUM:対象側 >= 1 && RAND:100 < 100

;発動テキストをオーバライドしたいときに。
;「誰それのスキル発動！　○○した！」の「○○した！」の部分を実装したい場合は、
;これじゃなくてINVOKEで書けばいいです。
;@SKILL_28_SP_2_INVOKE_TEXT(発動者, スキル, ジャンル)
;#DIM 発動者
;#DIM スキル
;#DIMS ジャンル

;効果をここに記述
@SKILL_28_SP_2_INVOKE(発動者, 発動番号, 発動側, 発動勢力, 発動部隊, 対象勢力, 対象部隊)
#DIM 発動者
#DIM 発動番号
#DIM スキル
#DIMS ジャンル
#DIM 発動側
#DIM 発動勢力
#DIM 発動部隊
#DIM 対象側
#DIM 対象勢力
#DIM 対象部隊
対象側 = !発動側
PRINTFORML %ANAME(BATTLE_COMMANDER:対象側:COMBAT_SKILL_TARGET)%は催眠術を受け寝返った！

LOCAL:1 = BATTLE_COMMANDER:対象側:COMBAT_SKILL_TARGET

FOR LOCAL:0, 0, VARSIZE("BATTLE_COMMANDER", 1)
	SIF BATTLE_COMMANDER:発動側:LOCAL >= 0
		CONTINUE
	BATTLE_COMMANDER:発動側:LOCAL = LOCAL:1
	BATTLE_武闘:発動側:LOCAL = ABL:(LOCAL:1):武闘
	BATTLE_知略:発動側:LOCAL = ABL:(LOCAL:1):知略
	BATTLE_政治:発動側:LOCAL = ABL:(LOCAL:1):政治
	BATTLE_歌唱:発動側:LOCAL = ABL:(LOCAL:1):歌唱
	BATTLE_料理:発動側:LOCAL = ABL:(LOCAL:1):料理
	BATTLE_武闘パワー:発動側:LOCAL = ABL_POWER_X(BATTLE_武闘:発動側:LOCAL, BATTLE_COMMANDER:発動側:LOCAL)
	BATTLE_防衛パワー:発動側:LOCAL = ABL_POWER_X(BATTLE_防衛:発動側:LOCAL, BATTLE_COMMANDER:発動側:LOCAL)
	BATTLE_知略パワー:発動側:LOCAL = ABL_POWER_X(BATTLE_知略:発動側:LOCAL, BATTLE_COMMANDER:発動側:LOCAL)
	BATTLE_妖術パワー:発動側:LOCAL = ABL_POWER_X(BATTLE_妖術:発動側:LOCAL, BATTLE_COMMANDER:発動側:LOCAL)
	BATTLE_歌唱パワー:発動側:LOCAL = ABL_POWER_X(BATTLE_歌唱:発動側:LOCAL, BATTLE_COMMANDER:発動側:LOCAL)
	BATTLE_料理パワー:発動側:LOCAL = ABL_POWER_X(BATTLE_料理:発動側:LOCAL, BATTLE_COMMANDER:発動側:LOCAL)
	BATTLE_SUMMONED_CHARA:発動側:LOCAL = 1
	BATTLE_COMMANDER_NUM:発動側 ++
	BREAK
NEXT

CALL ASSASINATE(対象側, COMBAT_SKILL_TARGET)

