@SKILL_17_SP_0_INVOKE(発動者, 発動番号, 発動側, 発動勢力, 発動部隊, 対象勢力, 対象部隊)
#DIM 発動者
#DIM 発動番号
#DIM スキル
#DIMS ジャンル
#DIM 発動側
#DIM 発動勢力
#DIM 発動部隊
#DIM 対象側
#DIM 対象勢力
#DIM 対象部隊
対象側 = !発動側
PRINTFORML 敵部隊全員の武闘が減少する！
IF 発動部隊 > 0
	FOR LOCAL, 0, BATTLE_COMMANDER_NUM:対象側
		LOCAL:1 = GET_UNIT_COMMANDER(対象勢力, 対象部隊, LOCAL:1)
		IF LOCAL:1 > 0
			BATTLE_武闘:対象側:COMBAT_SKILL_TARGET -= MIN_DECREASE(BATTLE_武闘:対象側:COMBAT_SKILL_TARGET, RAND(3,6), 1)
		ENDIF
	NEXT
ELSE
	FOR LOCAL, 0, BATTLE_COMMANDER_NUM:対象側
		LOCAL:1 = GET_CITY_COMMANDER(発動勢力, LOCAL:1)
		IF LOCAL:1 > 0
			BATTLE_武闘:対象側:COMBAT_SKILL_TARGET -= MIN_DECREASE(BATTLE_武闘:対象側:COMBAT_SKILL_TARGET, RAND(3,6), 1)
		ENDIF
	NEXT
ENDIF
RETURN 1

