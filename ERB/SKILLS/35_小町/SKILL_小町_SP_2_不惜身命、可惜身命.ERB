#DIM 対象部隊

対象側 = !発動側
PRINTFORML 兵数が入れ替わる！

LOCAL = (発動部隊 >= 0 ? UNIT_SOLDIER:発動勢力:発動部隊 # CITY_SOLDIER:発動勢力)
LOCAL:1 = (対象部隊 >= 0 ? UNIT_SOLDIER:対象勢力:対象部隊 # CITY_SOLDIER:対象勢力)

IF 対象部隊 >= 0
	LOCAL:5 = CITY_OWNER:対象勢力
	PRINTFORML %ANAME(GET_COUNTRY_BOSS(LOCAL:5)), 10, RIGHT%軍:{UNIT_SOLDIER:対象勢力:対象部隊, 6, RIGHT} → {LOCAL:0}
	UNIT_SOLDIER:対象勢力:対象部隊 = LOCAL
ELSE
	LOCAL:5 = CITY_OWNER:対象勢力
	PRINTFORML %@"\@ GET_COUNTRY_BOSS(LOCAL:5) >= 0 ? %ANAME(GET_COUNTRY_BOSS(LOCAL:5))% # 無所属 \@", 10, RIGHT%軍:{CITY_SOLDIER:対象勢力, 6, RIGHT} → {LOCAL:0}
	CITY_SOLDIER:対象勢力 = LOCAL
ENDIF

IF 対象部隊 >= 0
	LOCAL:5 = CITY_OWNER:対象勢力
	PRINTFORML %ANAME(GET_COUNTRY_BOSS(LOCAL:5)), 10, RIGHT%軍:{UNIT_SOLDIER:対象勢力:対象部隊, 6, RIGHT} → {LOCAL:1}
	UNIT_SOLDIER:対象勢力:対象部隊 = LOCAL:1
ELSE
	LOCAL:5 = CITY_OWNER:対象勢力
	PRINTFORML %@"\@ GET_COUNTRY_BOSS(LOCAL:5) >= 0 ? %ANAME(GET_COUNTRY_BOSS(LOCAL:5))% # 無所属 \@", 10, RIGHT%軍:{CITY_SOLDIER:対象勢力, 6, RIGHT} → {LOCAL:1}
	CITY_SOLDIER:対象勢力 = LOCAL:1
ENDIF


