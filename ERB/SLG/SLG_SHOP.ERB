;戦略フェイズのショップ画面

;-------------------------------------------------
;各コマンドが選択可能かどうかを調べる
;-------------------------------------------------
@CHECK_SHOP_COMABLE_SLG
LOCAL:3 = GET_COUNTRY_BOSS(CFLAG:MASTER:1)
;観戦モード
IF FLAG:1
	SIF FLAG:28
		SHOP_AVAIL:99 = 0
;放浪
ELSEIF CFLAG:MASTER:1 == 0
	IF FLAG:28
		SHOP_AVAIL:99 = O
	ELSE
		SHOP_AVAIL:50 = 0
	ENDIF
;どっかに仕官しているとき
ELSE
	SIF DAY < SLG_PP:1 || CONFIG:302 != 0
		SHOP_AVAIL:0 = 0

	SIF CONFIG:302 != 0
		SHOP_AVAIL:1 = 0

	SIF DAY < SLG_PP:0 || COUNTRY_IS_CLOSED:(CFLAG:MASTER:所属)
		SHOP_AVAIL:10 = 0

	SIF CONFIG:302 != 0
		SHOP_AVAIL:20 = 0

	SIF !(MONEY > CALC_SPECIAL_TRAIN_MONEY() && !DONE_SPECIAL_TRAIN)
		SHOP_AVAIL:30 = 0

	SIF !IS_SLAVEMARKET_AVAILABLE()
		SHOP_AVAIL:32 = 0

	SIF GET_NEW_COUNTRY() == -1
		SHOP_AVAIL:40 = 0
		
	;独立が選択可能かどうか
	;「主人公の所属する勢力が2都市以上所持していて、主人公が君主でない」が選択可能条件
	SIF !(LOCAL:3 != MASTER && CFLAG:MASTER:16 == 0 && GET_OWN_CITY(CFLAG:MASTER:1) >= 2 && CFLAG:MASTER:1 != GET_COUNTRY_FROM_ID(300))
		SHOP_AVAIL:40 = 0

	;クーデターが選択可能かどうか
	;条件がややこしいので、一旦フラグ折って、実行可能なら勃てる
	SHOP_AVAIL:41 = 0
	IF LOCAL:3 != MASTER && CFLAG:MASTER:16 == 0 && CFLAG:MASTER:1 != GET_COUNTRY_FROM_ID(300)
		LOCAL:2 = 0
		FOR LOCAL:0, 0, CHARANUM
			;[恋慕][親友][服従]のいずれかを持っている士官の数をカウント
			IF LOCAL:0 != MASTER && LOCAL:0 != LOCAL:3 && CFLAG:(LOCAL:0):1 == CFLAG:MASTER:1 && (TALENT:(LOCAL:0):恋慕 || TALENT:(LOCAL:0):親友 || TALENT:(LOCAL:0):服従)
				LOCAL:2 ++
			ENDIF
		NEXT
		;自国の半数以上の士官が陥落済みならクーデターが可能
		SIF LOCAL:2 * 2 >= GET_COMMANDER_NUM(CFLAG:MASTER:1) - 1
			SHOP_AVAIL:41 = 1
	ENDIF

	;野に下る
	;君主じゃなくて雇用カウンタが0
	SIF !(CFLAG:MASTER:1 && GET_COUNTRY_BOSS(CFLAG:MASTER:1) != MASTER && PLAYER_HIRED_COUNTER == 0)
		SHOP_AVAIL:42 = 0
ENDIF

