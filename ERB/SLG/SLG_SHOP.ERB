	LOCAL:5 = RESULT - 400
	IF CFLAG:MASTER:1 >= 1 && CITY_OWNER:(LOCAL:5) == CFLAG:MASTER:1
		;敵部隊のいる都市は変更不可
		CALL GET_STAY_ENEMY_UNIT(LOCAL:5)
		IF RESULT:0 >= 0
			PRINTFORMW 敵部隊が存在する都市の守将は変更できません
		ELSE
			CALL SHOP_CITY_COMMANDER(LOCAL:5)
		ENDIF
		RETURN 1
	ENDIF
