;-------------------------------------------------
;ショップ画面の入力処理(戦略フェイズ 0～99)
;ARG:0に入力した値が入る
;処理を行った場合は1を、行わなかった場合は0を返すこと
;-------------------------------------------------
@EVENTBUY_SLG(ARG:0)

IF FLAG:200 == 2
	SELECTCASE ARG:0
		CASE 54
			CALL SHOW_CITY_ARMY(0, -1)
			RETURN 0
		CASE 56
			CALL SHOW_CITY_ARMY(0, 1)
			RETURN 0
		CASE 44
			CALL SHOW_CITY_ARMY(0, -2)
			RETURN 0
		CASE 66
			CALL SHOW_CITY_ARMY(0, 2)
			RETURN 0
	ENDSELECT
ENDIF

IF SHOP_AVAIL:(ARG:0)
	;観戦モード
	IF FLAG:1
		SELECTCASE ARG:0
			;勢力情報
			CASE 0
				CALL SHOW_COUNTRY_DATA
			;行動終了
			CASE 99
				RESULT = 1
				BEGIN TURNEND
			CASEELSE
				RETURN 0
		ENDSELECT
	;放浪中
	ELSEIF CFLAG:MASTER:1 == 0
		SELECTCASE ARG:0
			;仕官する
			CASE 0
				CALL SHOP_SERVE_COUNTRY
			;旗揚げ
			CASE 1
				CALL SHOP_CREATE_COUNTRY
			;勢力情報
			CASE 5
				CALL SHOW_COUNTRY_DATA
			;次の周回へ
			CASE 50
				CALL GO_NEXT_LOOP
			;行動終了
			CASE  99
				RESULT = 1
				BEGIN TURNEND
			CASEELSE
				RETURN 0
		ENDSELECT
	;通常
	ELSE
		SELECTCASE ARG:0
			;部隊編成
			CASE 0
				CALL FORM_ARMY
			;防衛解除
			CASE 1
				CALL MINIMIZE_GUARD
			;外交
			CASE 10
				CALL DIPLOMACY
			;勢力情報
			CASE 11
				CALL SHOW_COUNTRY_DATA
			;政策変更
			CASE 20
				COUNTRY_POLICY:(CFLAG:MASTER:1) ++
				IF COUNTRY_POLICY:(CFLAG:MASTER:1) >= 3
					COUNTRY_POLICY:(CFLAG:MASTER:1) = 0
				ENDIF
				RETURN 0
			;都市管理
			CASE 21
				IF FLAG:200 == 2
					FLAG:200 = -1
				ELSE
					CALL SHOW_CITY_ARMY(1)
					FLAG:201 = 0
					FLAG:200 = 2
				ENDIF
				RETURN 0
			;特別訓練
			CASE 30
				CALL SLG_SPECIAL_TRAIN
			;臨時徴兵
			CASE 31
				CALL SLG_EXTRA_DRAFT
			;奴隷市場
			CASE 32
				CALL SLAVEMARKET
			;独立
			CASE 40
				CALL SHOP_INDEPENDENCE
			;クーデター
			CASE 41
				CALL SHOP_COAP
			;オート設定
			CASE 50
				CONFIG:302 ++
				IF CONFIG:302 >= 2
					CONFIG:302 = 0
				ENDIF
				RETURN 0
			;下野
			CASE 42
				CALL SHOP_RESIGN
			;行動終了
			CASE 99
				RESULT = 1
				BEGIN TURNEND
			CASEELSE
				RETURN 0
		ENDSELECT
	ENDIF
ELSE
	SIF ARG:0 != 21
		FLAG:200 = -1
	RETURN 0
ENDIF
SIF ARG:0 != 21
	FLAG:200 = -1

RETURN 1

;-------------------------------------------------
;ショップ画面の入力処理(戦略フェイズ 100～)
;ARG:0に入力した値が入る
;処理を行った場合は1を、行わなかった場合は0を返すこと
;-------------------------------------------------
