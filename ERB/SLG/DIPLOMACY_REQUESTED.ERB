LOCAL:31 = 0
FOR LOCAL:0, 0, CHARANUM
	IF CFLAG:(LOCAL:0):所属 == CFLAG:MASTER:所属 && LOCAL:0 != MASTER && LOCAL:0 != LOCAL:4
		LOCAL:2 = MAX(ABL:(LOCAL:0):武闘, ABL:(LOCAL:0):知略, ABL:(LOCAL:0):政治, ABL:(LOCAL:0):歌唱, ABL:(LOCAL:0):料理)
		IF LOCAL:2 >= 80
			LOCAL:30 ++
			LOCAL:31 ++
		ELSEIF LOCAL:2 >= 65
			LOCAL:30 ++
		ENDIF
	ENDIF
NEXT

;●各要求の確率を変数 REQUEST_RATE に設定
;0=兵を要求
;1=経済力を要求
;2=士官を要求
;10=性的行為を要求
;11=数期間の調教を要求

IF GET_SUM_SOLDIER(CFLAG:MASTER:所属) >= GET_SUM_ECONOMY(ARG:0) * 30 / 1000
	REQUEST_RATE:0 = 60
ENDIF
