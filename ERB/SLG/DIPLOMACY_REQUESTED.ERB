	REQUEST_RATE:1 = 30
ENDIF
IF ABL:(LOCAL:5):欲望 >= 3 && ABL:(LOCAL:5):性知識 >= 3
	REQUEST_RATE:10 = 50 + ABL:(LOCAL:5):欲望 * 10
ENDIF

