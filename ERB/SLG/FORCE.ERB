	ELSEIF 101 <= LOCAL:10 && LOCAL:10 <= MAX_UNIT + 100
		CALL UNIT_SETTING(CFLAG:MASTER:1, LOCAL:10 - 100)
	ELSE
		GOTO INPUT_LOOP
	ENDIF
