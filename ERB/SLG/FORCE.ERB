				PRINTFORML 中継地点を経由して進軍します
				RESETCOLOR
			ENDIF
			WAIT
		ELSE
			GOTO INPUT_LOOP
		ENDIF
	ELSEIF LOCAL:10 == 0
	ELSEIF LOCAL:10 == 20
		LOCAL:1 = 0
		FOR LOCAL:0, 0, MAX_UNIT
			IF UNIT_SOLDIER:(CFLAG:MASTER:1):(LOCAL:0) <= 0
				LOCAL:1 = 1
				CALL CREATE_UNIT(CFLAG:MASTER:1, LOCAL:0)
				BREAK
			ENDIF
		NEXT
		IF !LOCAL:1
			PRINTW これ以上部隊を編成することはできません
		ENDIF
