DRAWLINE
PRINTBUTTON " 1000[設定を確定して戻る]", 1000
PRINTL 

REDRAW 0

$INPUT_LOOP
INPUT


SELECTCASE RESULT
CASE 0 TO 949, 990 TO 999
	SDCONFIG:RESULT = !SDCONFIG:RESULT
CASE 950
	SDCONFIG:950 ++
	SDCONFIG:950 %= 5
CASE 951
	SDCONFIG:951 ++
	SDCONFIG:951 %= 10
CASE 952
	SDCONFIG:952 ++
	SDCONFIG:952 %= 10
CASE 953
